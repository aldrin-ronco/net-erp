<UserControl x:Class="NetErp.Global.DynamicControl.Views.DynamicControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetErp.Global.DynamicControl.Views"
             mc:Ignorable="d" 
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:cal="http://caliburnmicro.com"
             xmlns:config="clr-namespace:Common.Config;assembly=Common"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TextBlock     Text="{Binding Path=Title, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"  Grid.Row="0" ></TextBlock>
        <StackPanel Margin="20" x:Name="controls" Grid.Row="1">
            <ItemsControl ItemsSource="{Binding Controls}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical" Margin="6 5 10 5"
>
                            <TextBlock    Text="{Binding Path=Name, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"    Margin="0 0 0 2" />

                            <dxe:SpinEdit MinValue="0" Increment="1"
                     Visibility="{Binding Path=IntegerVisibility, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                     Padding="2"
                     Text="{Binding Path=StringValue, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                     CharacterCasing="Upper"
                     x:Name="Name"
                     Margin="0 0 0 2" />
                            <dxe:TextEdit
                     Visibility="{Binding Path=AlphanumericVisibility, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                     Padding="2"
                     Text="{Binding Path=StringValue, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                     CharacterCasing="Upper"
                         />
                            <dxe:DateEdit Margin="0 0 0 2"
                     Visibility="{Binding Path=DateVisibility, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                     TabIndex="3"
                     EditValue="{Binding Path=StringValue, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                     Padding="2" />
                            <dxe:ComboBoxEdit
                         Visibility="{Binding Path=ListVisibility, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                Padding="2"
                ItemsSource="{Binding Path=Qualifiers, UpdateSourceTrigger=PropertyChanged}"
                IsTextEditable="False"
                DisplayMember="Name"
                EditValue="{Binding SelectedOption, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                IsSynchronizedWithCurrentItem="True" />
                            <Grid Visibility="{Binding Path=ModalVisibility, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="9*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>
                                <dxe:TextEdit Grid.Column="0"
              IsReadOnly="True"
     Text="{Binding Path=SelectedOption.Name, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                                <Button
       Grid.Column="1"
 cal:Message.Attach="Execute" 
 Margin="5">
                                    <TextBlock>
            <Run Text="Buscar "/>
            <Run Text="{Binding Name}"/>
                                    </TextBlock>
                                </Button>

                            </Grid>
                          






                            <ItemsControl ItemsSource="{Binding Qualifiers}"  Visibility="{Binding Path=RadioVisibility, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal"
                                
                                 Width="auto"
                                 VerticalAlignment="Center"
                                 Margin="6 5 0 5">
                                            <RadioButton Content="{Binding Name}" 
                                                 
                                    GroupName="SequenceType"
                                    FontSize="{Binding Source={x:Static config:UICustom.ControlFontSize},Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                          IsChecked="{Binding IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    
                                    >

                                            </RadioButton>

                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>




                        </StackPanel>

                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

    </Grid>
</UserControl>
