<UserControl x:Class="NetErp.Global.Parameter.Views.ParameterMasterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetErp.Global.Parameter.Views"
             mc:Ignorable="d" 
              xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:config="clr-namespace:Common.Config;assembly=Common"
             xmlns:h="clr-namespace:NetErp.Helpers"
             d:DesignHeight="450" d:DesignWidth="800"
               xmlns:cal="http://caliburnmicro.com"
              xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             >
    <UserControl.Resources>
        <h:EnumBooleanConverter x:Key="EnumBooleanConverter" />
        <h:ObjectEqualityMultiConverter  x:Key="ObjectEqualityMultiConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <StackPanel Margin="20" x:Name="controls" Grid.Row="0">
            <ItemsControl ItemsSource="{Binding Actions}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical" Margin="6 5 10 5"
>
                            <TextBlock    Text="{Binding Path=Name, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"    Margin="0 0 0 2" />

                            <dxe:SpinEdit MinValue="0" Increment="1"
                     Visibility="{Binding Path=IntegerVisibility, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                     Padding="2"
                     Text="{Binding Path=Value, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                     CharacterCasing="Upper"
                     x:Name="Name"
                     Margin="0 0 0 2" />
                            <dxe:TextEdit
                     Visibility="{Binding Path=AlphanumericVisibility, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                     Padding="2"
                     Text="{Binding Path=Value, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                     CharacterCasing="Upper"
                         />
                            <dxe:DateEdit Margin="0 0 0 2"
                     Visibility="{Binding Path=DateVisibility, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                     TabIndex="3"
                     EditValue="{Binding Path=Value, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                     Padding="2" />
                            <dxe:ComboBoxEdit
                         Visibility="{Binding Path=ListVisibility, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                Padding="2"
                ItemsSource="{Binding Path=Qualifiers, UpdateSourceTrigger=PropertyChanged}"
                IsTextEditable="False"
                DisplayMember="Name"
                EditValue="{Binding SelectedOption, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                IsSynchronizedWithCurrentItem="True" />
                            <StackPanel Orientation="horizontal" Margin="6 5 10 5" x:Name="modal"
                                         Visibility="{Binding Path=ModalVisibility, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                        >
                                <TextBlock    Text="{Binding Path=SelectedOption.Name, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"    Margin="0 0 0 2" />
                                <Button Content="{Binding Name}" 
                                       
                                cal:Message.Attach="Execute" 
                                Margin="5"/>


                            </StackPanel>

                                


                                

                            <ItemsControl ItemsSource="{Binding Qualifiers}"  Visibility="{Binding Path=RadioVisibility, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal"
                                
                                 Width="auto"
                                 VerticalAlignment="Center"
                                 Margin="6 5 0 5">
                                            <RadioButton Content="{Binding Name}" 
                                                 
                                    GroupName="SequenceType"
                                    FontSize="{Binding Source={x:Static config:UICustom.ControlFontSize},Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                          IsChecked="{Binding IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    
                                    >
                                                
                                            </RadioButton>

                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>




                        </StackPanel>

                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <StackPanel Grid.Row="1" >

            <Button
         BorderThickness="0"
         Padding="3"
         Margin="3"
         Width="auto" Height="auto" 
         cal:Message.Attach="[Event Click] = [Action save]">
                <Button.Content>
                    <Image Source="{dx:SvgImageSource Uri='pack://application:,,,/DevExpress.Images.v24.2;component/SvgImages/XAF/Action_Edit.svg', Size='60,70'}" Stretch="None" />
                </Button.Content>
            </Button>

        </StackPanel>
    </Grid>
</UserControl>
