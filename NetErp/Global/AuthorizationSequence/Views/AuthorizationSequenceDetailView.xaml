<UserControl x:Class="NetErp.Global.AuthorizationSequence.Views.AuthorizationSequenceDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetErp.Global.AuthorizationSequence.Views"
                          xmlns:busyIndicator="https://github.com/moh3ngolshani/BusyIndicator"

             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
              xmlns:cal="http://caliburnmicro.com"
                 xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon"
                 xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
                 xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                 xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
                 xmlns:config="clr-namespace:Common.Config;assembly=Common"
                 xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"      
                 xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:h="clr-namespace:NetErp.Helpers"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             FontFamily="Century Gothic">
    <UserControl.Resources>
        <h:EnumBooleanConverter x:Key="EnumBooleanConverter"/>
    </UserControl.Resources>
    <busyIndicator:BusyMask x:Name="BusyIndicator"
                  IsBusy="{Binding IsBusy}"
                  IndicatorType="BouncingDot"
                  BusyContent="Please wait..."
                  BusyContentMargin="0,20,0,0"
                  IsBusyAtStartup="False">
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <dxr:RibbonControl Grid.Column="0" Grid.ColumnSpan="3" IsSimplified="False" 
        AllowSimplifiedRibbon="True" ShowApplicationButton="False" ToolbarShowMode="Hide" 
        RibbonStyle="Office2010" ToolbarShowCustomizationButton="False" RibbonTitleBarVisibility="Collapsed" VerticalAlignment="Center">

            <dxr:RibbonPage Caption="General">

                <dxr:RibbonPageGroup Caption="Acciones">
                    <dxb:BarButtonItem x:Name="btnBack" 
                    Glyph="{dx:DXImage 'Images/Navigation/Backward_16x16.png'}"
                    LargeGlyph="{dx:DXImage 'Images/Navigation/Backward_32x32.png'}" 
                    Content="Regresar"
                    RibbonStyle="Large"
                    Hint="Regresa a la lista"
                    Command="{Binding Path=GoBackCommand}"/>
                    <dxb:BarItemSeparator/>
                    <dxb:BarButtonItem 
                 x:Name="btnSave" 
                 Glyph="{dx:DXImage 'Images/Save/Save_16x16.png'}" 
        LargeGlyph="{dx:DXImage 'Images/Save/Save_32x32.png'}" 
        Content="Guardar"
        RibbonStyle="Large"
        IsEnabled="{Binding Path=CanSave, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
      
        Hint="Guardar">
                        <dxmvvm:Interaction.Behaviors>
                            <dxmvvm:EventToCommand Command="{Binding Path=SaveCommand}" 
            EventName="ItemClick"/>
                        </dxmvvm:Interaction.Behaviors>
                    </dxb:BarButtonItem>
                        <dxb:BarItemSeparator/>

                        <dxb:BarItemLinkSeparator/>
                </dxr:RibbonPageGroup>
            </dxr:RibbonPage>
        </dxr:RibbonControl>
        <StackPanel Orientation="Horizontal" 
        Grid.Row="1" 
        Visibility="{Binding Path=OriginVisibility, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                    
        Width="auto"                       
        VerticalAlignment="Center" 
       Margin="6 10 0 2">
            <RadioButton Content="Manual"
         GroupName="SequenceType"
         FontSize="{Binding Source={x:Static config:UICustom.ControlFontSize},Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
         IsChecked="{Binding SelectedSequenceOrigin, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, 
         Converter={StaticResource EnumBooleanConverter}, ConverterParameter=M}"/>
            <RadioButton Content="Desde Dian"
         GroupName="SequenceType"
         IsChecked="{Binding SelectedSequenceOrigin, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, 
         Converter={StaticResource EnumBooleanConverter}, ConverterParameter=D}"
         Margin="5 0 0 0"
         FontSize="{Binding Source={x:Static config:UICustom.ControlFontSize}, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
        <Grid x:Name="Gridhead" Grid.Row="2" VerticalAlignment="Center" Height="auto">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
                <Button Grid.Row="0"  Margin="4 4 0 4" Padding="2" x:Name="SearchAuthorizationSequences"
                    Visibility="{Binding Path=Lv1Visibility, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                    >
                <Button.Content>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Source="{dx:DXImage 'Images/Spreadsheet/FunctionsLookupAndReference_16x16.png'}" Margin="0 0 4 0" Width="16"/>
                        <TextBlock Text="Buscar autorizaciones de numeración Dian" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button.Content>
            </Button>
            <StackPanel Grid.Row="1" Margin="6 2 0 2" Orientation="Vertical" 
                        Visibility="{Binding Path=Lv1Visibility, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
                <TextBlock Text="Selecciona una Autorizacion" Margin="0 0 0 5"/>
                    <dxe:ComboBoxEdit  ItemsSource="{Binding Path=AuthorizationSequences, UpdateSourceTrigger=PropertyChanged}" IsTextEditable="False"
DisplayMember="Description" EditValue="{Binding SelectedAuthorizationSequence, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsSynchronizedWithCurrentItem="True" />
            </StackPanel>
            <StackPanel Grid.Row="2" Margin="6 2 0 2" Orientation="Vertical">
                <TextBlock Text="Autorizacion destinada para el almacen" Margin="0 0 0 5"/>
                <dxe:ComboBoxEdit  ItemsSource="{Binding Path=CostCenters, UpdateSourceTrigger=PropertyChanged}" IsTextEditable="False"
    DisplayMember="FullName" EditValue="{Binding SelectedCostCenter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsSynchronizedWithCurrentItem="True" />
            </StackPanel>
        </Grid>
        

        <Grid x:Name="GridSource" Grid.Row="3" VerticalAlignment="Center" Height="auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <TextBlock Text="No Autorizacion" Grid.Row="0" Grid.Column="0" Margin="6 2 0 2"/>
            <TextBlock Text="Fecha"         Grid.Row="0" Grid.Column="1" Margin="6 2 0 2"/>
            <TextBlock Text="Vence"         Grid.Row="0" Grid.Column="2" Margin="6 2 0 2"/>
            <TextBlock Text="Prefijo"       Grid.Row="0" Grid.Column="3" Margin="6 2 0 2"/>
            <dxe:TextEdit  Grid.Row="1" Grid.Column="0"
                Text="{Binding Path=Number, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                IsReadOnly="{Binding SequenceD, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                CharacterCasing="Upper"
                x:Name="Number"
                Margin="6 5 0 2"/>


            <DatePicker Grid.Column="1" Grid.Row="1" Margin="6 2 0 2"
            TabIndex="3"
            SelectedDate="{Binding Path=StartDate, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" 
            IsEnabled="{Binding SequenceD, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={dxmvvm:BooleanNegationConverter}}"
            Padding="3"/>

            <DatePicker Grid.Column="2" Grid.Row="1" Margin="6 2 0 2"
             IsEnabled="{Binding SequenceD, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={dxmvvm:BooleanNegationConverter}}"
            TabIndex="3"
            SelectedDate="{Binding Path=EndDate, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"                                
            Padding="3"/>
            <dxe:TextEdit   Grid.Row="1" Grid.Column="3"
             Text="{Binding Path=Prefix, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
             CharacterCasing="Upper"
             IsReadOnly="{Binding SequenceD, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"

             x:Name="Prefix"
             Margin="6 5 0 2"/>   




        </Grid>
        <TextBlock   Grid.Row="4" Text="Rango de facturación " Margin="6 5 0 5"/>

        <Grid x:Name="GridRange" Grid.Row="5" Grid.Column="1" VerticalAlignment="Center" Height="auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Rango inicial" Grid.Row="0" Grid.Column="0" Margin="6 2 0 2"/>

                <dxe:SpinEdit  Grid.Row="0" Grid.Column="1"  MinValue="0" Increment="1" 
               Text="{Binding Path=StartRange, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
               IsReadOnly="{Binding SequenceD, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" 
               CharacterCasing="Upper"
               x:Name="StartRange"
               Margin="6 5 0 2"/>
            
               
            
            
            
            <TextBlock Text="Rango final" Grid.Row="0" Grid.Column="2" Margin="20 5 0 2"/>
                <dxe:SpinEdit Grid.Row="0" Grid.Column="3"  MinValue="0" Increment="1" 
              Text="{Binding Path=EndRange, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
              CharacterCasing="Upper"
              IsReadOnly="{Binding SequenceD, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
              MaskType="Numeric"  
              x:Name="EndRange"
              Margin="6 5 0 2"/>
            
            
            
            <TextBlock Text="Factura actual" Grid.Row="1" Grid.Column="0" Margin="6 2 0 2"/>
                
                <dxe:SpinEdit Grid.Row="1" Grid.Column="1"  MinValue="0" Increment="1" 
               Text="{Binding Path=CurrentInvoiceNumber, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
              
               CharacterCasing="Upper"
               x:Name="CurrentInvoiceNumber"
               Margin="6 5 0 2"/> 
            
            
            <TextBlock Text="Tipo" Grid.Row="1" Grid.Column="2" Margin="20 5 0 2"/>

            <dxe:ComboBoxEdit  Grid.Column="3" Grid.Row="1"   Margin="6 5 0 2"
                 x:Name="ModeDictionary"
               
                ItemsSource="{Binding Path=ModeDictionary, UpdateSourceTrigger=PropertyChanged}" IsTextEditable="False"
                DisplayMember="Value" 
                ValueMember="Key"
                               
                EditValue="{Binding Path=SelectedMode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                IsSynchronizedWithCurrentItem="True" 
                />

           
        </Grid>
        <Grid  Grid.Row="6" Grid.Column="1" VerticalAlignment="Center" Height="auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="5*"/>
               
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Tipo de Autorización" Grid.Row="0" Grid.Column="0" Margin="6 2 0 2"/>
            <TextBlock Text="Referencia"         Grid.Row="1" Grid.Column="0" Margin="6 2 0 2"/>
            <TextBlock Text="Clave Técnica"         Grid.Row="2" Grid.Column="0" Margin="6 2 0 2"/>
            <dxe:ComboBoxEdit  Grid.Column="1" Grid.Row="0"  Margin="6 5 0 2"
                IsReadOnly="{Binding EnabledAST, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={dxmvvm:BooleanNegationConverter}}"
                ItemsSource="{Binding Path=AvaliableAuthorizationSequenceTypes, UpdateSourceTrigger=PropertyChanged}" IsTextEditable="False"
                DisplayMember="Name" EditValue="{Binding Path=SelectedAuthorizationSequenceType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                IsSynchronizedWithCurrentItem="True" 
                IsEnabled="{Binding EnabledAST, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>

            <dxe:TextEdit Grid.Row="1" Grid.Column="1"
                Text="{Binding Path=Reference, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                CharacterCasing="Upper"
                x:Name="Reference"
                Margin="6 5 0 2"/>

            <dxe:TextEdit Grid.Row="2" Grid.Column="1"  Margin="6 5 0 2"
                Text="{Binding Path=TechnicalKey, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                CharacterCasing="Upper"
                 IsReadOnly="{Binding SequenceD, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                x:Name="TechnicalKey"
              />


        </Grid>
        <CheckBox Content="Autorización activa"    Grid.Row="7"                            
  
        IsChecked="{Binding IsActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
    </busyIndicator:BusyMask>
</UserControl>
