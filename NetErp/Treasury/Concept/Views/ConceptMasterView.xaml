<UserControl x:Class="NetErp.Treasury.Concept.Views.ConceptMasterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetErp.Treasury.Concept.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             
             
            xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
            xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"      
            xmlns:h="clr-namespace:NetErp.Helpers"
            xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
            xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
            xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon"
            xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
            xmlns:cal="http://caliburnmicro.com"
            xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
            xmlns:busyIndicator="https://github.com/moh3ngolshani/BusyIndicator"
            xmlns:uc="clr-namespace:NetErp.UserControls">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <dxr:RibbonControl Grid.Column="0" IsSimplified="False" Grid.Row="0" 
                           AllowSimplifiedRibbon="True" ShowApplicationButton="False" ToolbarShowMode="Hide" 
                           RibbonStyle="Office2010" ToolbarShowCustomizationButton="False" RibbonTitleBarVisibility="Collapsed" VerticalAlignment="Center">

            <dxr:RibbonPage Caption="General">

                <dxr:RibbonPageGroup Caption="Acciones">
                    <dxb:BarButtonItem     Glyph="{dx:DXImage 'Images/Actions/New_16x16.png'}" 
                   LargeGlyph="{dx:DXImage 'Images/Actions/New_32x32.png'}" 
                   Content="Nuevo"
                   RibbonStyle="Large"
                   IsEnabled="{Binding Path=IsBusy, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={dxmvvm:BooleanToVisibilityConverter Inverse=True}}"
                   Hint="Crear un nuevo concepto">
                        <dxmvvm:Interaction.Behaviors>
                            <dxmvvm:EventToCommand Command="{Binding Path=CreateConceptCommand}" EventName="ItemClick"/>
                        </dxmvvm:Interaction.Behaviors>
                    </dxb:BarButtonItem>
                    <dxb:BarItemSeparator/>
                    <dxb:BarButtonItem Content="Eliminar" 
                   Glyph="{dx:DXImage 'Images/Actions/DeleteList_16x16.png'}" 
                   LargeGlyph="{dx:DXImage 'Images/Actions/DeleteList_32x32.png'}"                                             
                   Description="Eliminar"
                   Hint="Eliminar el concepto seleccionado"    
                   IsEnabled="{Binding Path=CanDeleteConcept, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                   RibbonStyle="Large">
                        <dxmvvm:Interaction.Behaviors>
                            <dxmvvm:EventToCommand Command="{Binding Path=DeleteConceptCommand}" EventName="ItemClick"/>
                        </dxmvvm:Interaction.Behaviors>
                    </dxb:BarButtonItem>
                    <dxb:BarItemLinkSeparator/>
                </dxr:RibbonPageGroup>
            </dxr:RibbonPage>
        </dxr:RibbonControl>
        <TextBlock Grid.Row="1" Grid.Column="0" Margin="10 10 0 10" Text="Para filtrar, seleccione el tipo de concepto que requiere modificar:"></TextBlock>

        <StackPanel Grid.Row="2" Grid.Column="0" Margin="10 10 0 10" Orientation="Horizontal">
            <RadioButton GroupName="ConceptType" Content="DESCUENTOS"
                         IsChecked="{Binding Path=IsTypeD, Mode=TwoWay}"
                         Command="{Binding SelectTypeCommand}" CommandParameter="D"/>

            <RadioButton GroupName="ConceptType" Content="INGRESOS"
                         IsChecked="{Binding Path=IsTypeI, Mode=TwoWay}"
                         Command="{Binding SelectTypeCommand}" CommandParameter="I"
                         Margin="10,0,0,0"/>

            <RadioButton GroupName="ConceptType" Content="EGRESOS"
                         IsChecked="{Binding Path=IsTypeE, Mode=TwoWay}"
                         Command="{Binding SelectTypeCommand}" CommandParameter="E"
                         Margin="10,0,0,0"/>

            <RadioButton GroupName="ConceptType" Content="TODOS"
                         IsChecked="True"
                         Command="{Binding SelectTypeCommand}" CommandParameter="T"
                         Margin="10,0,0,0"/>
        </StackPanel>


        <busyIndicator:BusyMask x:Name="BusyIndicator"
            IsBusy="{Binding IsBusy}"
            IndicatorType="BouncingDot"
            BusyContent="Please wait..."
            BusyContentMargin="0,20,0,0"
            IsBusyAtStartup="False"
            Grid.Row="3">
            <dxg:GridControl  Margin="0 10 0 0"
                              SelectedItem="{Binding Path=SelectedItem, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                              ItemsSource="{Binding Path=Concepts, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">

                <dxg:GridControl.View>
                    <dxg:TableView AllowEditing="False" 
                                   AllowCascadeUpdate="False" 
                                   EnableSelectedRowAppearance="True"
                                   ShowGroupPanel="False" AlternateRowBackground="Beige"
                                   AllowColumnMoving="False"
                                   AllowSorting="False"/>      
                </dxg:GridControl.View>
                <dxg:GridColumn Header="Nombre del concepto" HorizontalHeaderContentAlignment="Center" Width="*"
                                Binding="{Binding Path=Name, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                    
                </dxg:GridColumn>
                <dxg:GridColumn Header="Cuenta contable" HorizontalHeaderContentAlignment="Center" Width="auto"
                                Binding="{Binding Path=AccountingAccountName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                    
                </dxg:GridColumn>
                <dxg:GridColumn Width="auto">
                    <dxg:GridColumn.CellTemplate>
                        <DataTemplate>
                            <Button
                                BorderThickness="0"
                                Padding="3"
                                Margin="3"
                                Width="auto" Height="auto" 
                                cal:Message.Attach="[Event Click] = [Action EditConcept]">
                                <Button.Content>
                                    <Image Source="{dx:SvgImageSource Uri='pack://application:,,,/DevExpress.Images.v24.2;component/SvgImages/XAF/Action_Edit.svg', Size='16,16'}" Stretch="None" />
                                </Button.Content>
                            </Button>
                        </DataTemplate>
                    </dxg:GridColumn.CellTemplate>
                </dxg:GridColumn>
            </dxg:GridControl>
        </busyIndicator:BusyMask>
        <uc:GridPaging Grid.Row="4" Grid.Column="0" 
               HorizontalAlignment="Stretch"
               VerticalAlignment = "Center"
               ChangedIndexCommand="{Binding PaginationCommand}" 
               PageIndex="{Binding PageIndex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
               PageSize="{Binding PageSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
               TotalCount="{Binding TotalCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
               ResponseTime="{Binding ResponseTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>



    </Grid>
</UserControl>
