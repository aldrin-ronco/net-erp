<UserControl x:Class="NetErp.Treasury.Concept.Views.ConceptMasterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetErp.Treasury.Concept.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             
             
            xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
            xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"      
            xmlns:h="clr-namespace:NetErp.Helpers"
            xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
            xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
            xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon"
            xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
            xmlns:cal="http://caliburnmicro.com"
            xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
            xmlns:busyIndicator="https://github.com/moh3ngolshani/BusyIndicator"
            xmlns:uc="clr-namespace:NetErp.UserControls">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <dxr:RibbonControl Grid.Row="0" Grid.Column="0"></dxr:RibbonControl>
        <TextBlock Grid.Row="1" Grid.Column="0" Margin="10 10 0 10" Text="Seleccione el tipo de concepto que desea modificar:"></TextBlock>

        <StackPanel Grid.Row="2" Grid.Column="0" Margin="10 10 0 10" Orientation="Horizontal">
            <RadioButton GroupName="ConceptType" Content="Descuentos"/>
            <RadioButton GroupName="ConceptType" Content="Ingresos"/>
            <RadioButton GroupName="ConceptType" Content="Egresos"/>
            <RadioButton GroupName="ConceptType" Content="Todos"/>
        </StackPanel>
        <Grid Grid.Row="3" Grid.Column="0">
            <dxg:GridControl  Margin="0 10 0 0" ItemsSource="{Binding Path=Concepts, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                <dxg:GridColumn Header="Descripción" HorizontalHeaderContentAlignment="Center" Width="auto"
                                Binding="{Binding Path=Name, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                    
                </dxg:GridColumn>
                <dxg:GridColumn Header="Cuenta" HorizontalHeaderContentAlignment="Center" Width="auto"
                                Binding="{Binding Path=AccountingAccountId, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                    
                </dxg:GridColumn>
                <dxg:GridColumn Width="auto">
                    
                </dxg:GridColumn>
            </dxg:GridControl>
        </Grid>
        <uc:GridPaging Grid.Row="4" Grid.Column="0" 
               HorizontalAlignment="Stretch"
               VerticalAlignment = "Center"
               ChangedIndexCommand="{Binding PaginationCommand}" 
               PageIndex="{Binding PageIndex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
               PageSize="{Binding PageSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
               TotalCount="{Binding TotalCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
               ResponseTime="{Binding ResponseTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>



    </Grid>
</UserControl>
