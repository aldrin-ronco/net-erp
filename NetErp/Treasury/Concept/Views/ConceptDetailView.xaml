<UserControl x:Class="NetErp.Treasury.Concept.Views.ConceptDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetErp.Treasury.Concept.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             
             
            xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
            xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"      
            xmlns:h="clr-namespace:NetErp.Helpers"
            xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
            xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
            xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon"
            xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
            xmlns:cal="http://caliburnmicro.com"
            xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
            xmlns:busyIndicator="https://github.com/moh3ngolshani/BusyIndicator"
            xmlns:uc="clr-namespace:NetErp.UserControls">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>

        <dxr:RibbonControl  IsSimplified="False" Grid.Row="0" Margin="0 0 0 10"
                            AllowSimplifiedRibbon="True" ShowApplicationButton="False" ToolbarShowMode="Hide" 
                            RibbonStyle="Office2010" ToolbarShowCustomizationButton="False" RibbonTitleBarVisibility="Collapsed" VerticalAlignment="Center">
            <dxr:RibbonPage Caption="General">

                <dxr:RibbonPageGroup Caption="Acciones">
                    <dxb:BarButtonItem
               Glyph="{dx:DXImage 'Images/Navigation/Backward_16x16.png'}"
               LargeGlyph="{dx:DXImage 'Images/Navigation/Backward_32x32.png'}" 
               Content="Regresar"
               RibbonStyle="Large"
               Hint="Regresa a la lista de conceptos."
               Command="{Binding Path=GoBackCommand}"/>
                    <dxb:BarItemSeparator/>

                    <dxb:BarButtonItem Content="Guardar" 
                   Glyph="{dx:DXImage 'Images/Save/Save_16x16.png'}" 
                   LargeGlyph="{dx:DXImage 'Images/Save/Save_32x32.png'}"                                             
                   Description="Creates a new document."
                   Hint="Guarda los cambios realizados"    
                   IsEnabled="{Binding Path=CanSave, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                   RibbonStyle="Large">
                        <dxmvvm:Interaction.Behaviors>
                            <dxmvvm:EventToCommand Command="{Binding Path=SaveCommand}" EventName="ItemClick"/>
                        </dxmvvm:Interaction.Behaviors>
                    </dxb:BarButtonItem>

                </dxr:RibbonPageGroup>
            </dxr:RibbonPage>
        </dxr:RibbonControl>

        <Grid Grid.Row=" 1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                

                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="2" HorizontalAlignment="Center"></TextBlock>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <RadioButton Content="Descuentos" 
                     IsChecked="{Binding Path=IsTypeD, Mode=OneWay}" 
                     CommandParameter="D" 
                     Command="{Binding ChangeTypeCommand}"/>
                <RadioButton Content="Ingresos" 
                     IsChecked="{Binding Path=IsTypeI, Mode=OneWay}" 
                     CommandParameter="I" 
                     Command="{Binding ChangeTypeCommand}"/>
                <RadioButton Content="Egresos" 
                     IsChecked="{Binding Path=IsTypeE, Mode=OneWay}" 
                     CommandParameter="E" 
                     Command="{Binding ChangeTypeCommand}"/>    

            </StackPanel>



            <TextBlock Grid.Row="4" Text="Nombre del concepto:" HorizontalAlignment="Center"></TextBlock>
            <dxe:TextEdit Grid.Row="5" 
                          Width="300" 
                          HorizontalAlignment="Center"
                          Text="{Binding Path=NameConcept, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                
            </dxe:TextEdit>

            <TextBlock Grid.Row="6" Text="Cuenta contable:" HorizontalAlignment="Center"></TextBlock>
            <dxg:LookUpEdit Grid.Row="7" Width="300" HorizontalAlignment="Center" 
                  ItemsSource="{Binding AccoutingAccount}"
                  SelectedItem="{Binding SelectedAccoutingAccount}"
                  IsTextEditable="False"
                  DisplayMember="Name"
                  ValueMember="Id"
                  Margin="0 0 0 10"/>

