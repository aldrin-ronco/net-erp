            </dxg:LookUpEdit>-->





            <dxe:CheckEdit Grid.Row="8" 
                           Content="Aplicar porcentaje" 
                           HorizontalAlignment="Center" 
                           IsChecked="{Binding IsApplyPercentage, Mode=TwoWay}"
                           Visibility="{Binding IsPercentageSectionVisible}"/>

            <StackPanel Grid.Row="10" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Visibility="{Binding IsPercentageOptionsVisible}">
                <!-- SpinEdit para ingresar el valor numérico -->
                <dxe:SpinEdit Width="80"
                  EditValue="{Binding PercentageValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  MinValue="0"
                  MaxValue="1000"
                  Increment="0.001"/>

                <!-- Texto descriptivo -->
                <TextBlock Text=" Base " VerticalAlignment="Center" Margin="10,0,10,0"/>

                <!-- RadioButtons para las opciones -->
                <RadioButton GroupName="BaseOptions" Content="100" IsChecked="{Binding IsBase100}" />
                <RadioButton GroupName="BaseOptions" Content="1000" IsChecked="{Binding IsBase1000}" Margin="10,0,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
