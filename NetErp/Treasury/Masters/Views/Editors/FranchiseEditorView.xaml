<UserControl x:Class="NetErp.Treasury.Masters.Views.Editors.FranchiseEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:h="clr-namespace:NetErp.Helpers">
    <UserControl.Resources>
        <h:StringToBooleanConverter x:Key="StringToBooleanConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Row 0: Form content -->
        <Grid Grid.Row="0" Margin="20 0 0 0" IsEnabled="{Binding IsEditing, UpdateSourceTrigger=PropertyChanged}">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Aplicación" Grid.Column="0" Grid.Row="0" Margin="0 5 0 5" FontWeight="Bold"/>
            <dxe:ComboBoxEdit Grid.Column="0" Grid.Row="1" Margin="0 5 0 10"
                              ItemsSource="{Binding FranchiseCostCenters, UpdateSourceTrigger=PropertyChanged}"
                              EditValue="{Binding SelectedCostCenter, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                              DisplayMember="Name" IsTextEditable="False"
                              IsEnabled="{Binding IsNewRecord, UpdateSourceTrigger=PropertyChanged, Converter={dxmvvm:BooleanNegationConverter}}"/>

            <TextBlock Text="Cuenta Bancaria" Grid.Column="0" Grid.Row="2" Margin="0 10 0 5" FontWeight="Bold"/>
            <dxe:ComboBoxEdit Grid.Column="0" Grid.Row="3" Margin="0 5 0 10"
                              ItemsSource="{Binding FranchiseBankAccounts, UpdateSourceTrigger=PropertyChanged}"
                              EditValue="{Binding SelectedBankAccount, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                              DisplayMember="Description" IsTextEditable="False"
                              NullText="&lt;&lt; SELECCIONE UNA CUENTA BANCARIA &gt;&gt;"/>

            <TextBlock Text="Nombre de la franquicia" Grid.Column="0" Grid.Row="4" Margin="0 10 0 5" FontWeight="Bold"/>
            <dxe:TextEdit Grid.Column="0" Grid.Row="5" Margin="0 5 0 10" x:Name="FranchiseName" CharacterCasing="Upper"
                          Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          IsReadOnly="{Binding IsCostCenterSelected, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Tipo de tarjeta" Grid.Column="0" Grid.Row="6" Margin="0 10 0 5" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="7" Margin="0 5 0 10"
                        IsEnabled="{Binding IsCostCenterSelected, UpdateSourceTrigger=PropertyChanged, Converter={dxmvvm:BooleanNegationConverter}}">
                <RadioButton Content="Débito" GroupName="Type" Margin="0 0 5 0" VerticalAlignment="Center" IsChecked="{Binding Type, Converter={StaticResource StringToBooleanConverter}, ConverterParameter=TD, UpdateSourceTrigger=PropertyChanged}"/>
                <RadioButton Content="Crédito" GroupName="Type" Margin="5 0 0 0" VerticalAlignment="Center" IsChecked="{Binding Type, Converter={StaticResource StringToBooleanConverter}, ConverterParameter=TC, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <TextBlock Text="Cuenta de comisiones" Grid.Column="0" Grid.Row="8" Margin="0 10 0 5" FontWeight="Bold"/>
            <dxe:ComboBoxEdit Grid.Column="0" Grid.Row="9" Margin="0 5 0 10"
                              ItemsSource="{Binding FranchiseAccountingAccountsCommission, UpdateSourceTrigger=PropertyChanged}"
                              EditValue="{Binding SelectedCommissionAccountingAccount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              DisplayMember="FullName" IsTextEditable="False"
                              NullText="&lt;&lt; SELECCIONE UNA CUENTA CONTABLE &gt;&gt;"/>

            <TextBlock Text="SIMULADOR" Grid.Column="0" Grid.Row="10" FontWeight="Bold" HorizontalAlignment="Center" FontSize="16"/>
            <Grid Grid.Column="0" Grid.Row="11" Margin="0 10 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.3*"/>
                    <ColumnDefinition Width="0.6*"/>
                    <ColumnDefinition Width="0.4*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="0.4*"/>
                    <ColumnDefinition Width="0.5*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <!--valor tarjetas-->
                <TextBlock Text="Valor Tarjetas" Grid.Column="0" Grid.Row="1" Margin="0 5 0 5" VerticalAlignment="Center"/>
                <TextBlock Text="[VALOR_TARJETA]" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" Margin="0 5 0 5" FontWeight="Bold"/>
                <dxe:TextEdit Text="{Binding CardValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              Grid.Column="2" Grid.Row="1" Margin="0 5 5 5" HorizontalContentAlignment="Right"
                              MaskType="Numeric" MaskUseAsDisplayFormat="True" MaskCulture="en-US"
                              Mask="{Binding FranchiseDecimalsCount}"/>

                <!--margen iva-->
                <TextBlock Text="Margen I.V.A" Grid.Column="0" Grid.Row="2" Margin="0 5 0 5" VerticalAlignment="Center"/>
                <TextBlock Text="[MARGEN_IVA]" Grid.Column="1" Grid.Row="2" Margin="0 5 0 5" VerticalAlignment="Center" FontWeight="Bold"/>
                <dxe:TextEdit Text="{Binding TaxRate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              Grid.Column="2" Grid.Row="2" Margin="0 5 5 5" HorizontalContentAlignment="Right"
                              MaskType="Numeric" MaskUseAsDisplayFormat="True" MaskCulture="en-US"
                              Mask="{Binding FranchiseDecimalsCount}"/>
                <!--valor iva-->
                <TextBlock Text="Valor I.V.A" Grid.Column="3" Grid.Row="2" Margin="0 0 5 5" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                <TextBlock Text="[VALOR_IVA]" Grid.Column="4" Grid.Row="2" VerticalAlignment="Center" Margin="5 0 0 5" FontWeight="Bold" HorizontalAlignment="Left"/>
                <dxe:TextEdit Text="{Binding SimulatedIvaValue, UpdateSourceTrigger=PropertyChanged}"
                              Grid.Column="5" Grid.Row="2" Margin="5 5 5 5" IsReadOnly="True"
                              HorizontalContentAlignment="Right" MaskType="Numeric" MaskCulture="en-US"
                              Mask="{Binding FranchiseDecimalsCount}" MaskUseAsDisplayFormat="True"/>

                <!--margen comision-->
                <TextBlock Text="Comisión" Grid.Column="0" Grid.Row="3" Margin="0 5 0 5" VerticalAlignment="Center"/>
                <TextBlock Text="[MARGEN_COMISION]" Grid.Column="1" Grid.Row="3" Margin="0 5 0 5" VerticalAlignment="Center" FontWeight="Bold"/>
                <dxe:TextEdit Text="{Binding CommissionRate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              Grid.Column="2" Grid.Row="3" Margin="0 5 5 5" HorizontalContentAlignment="Right" MaskCulture="en-US"
                              MaskType="Numeric" MaskUseAsDisplayFormat="True" Mask="{Binding FranchiseDecimalsCount}"/>
                <dxe:TextEdit Text="{Binding FormulaCommission, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              Grid.Column="3" Grid.Row="3" Margin="5 5 5 5" CharacterCasing="Upper"/>
                <Button Grid.Column="4" Grid.Row="3" Margin="5 5 5 5" Command="{Binding FranchiseResetFormulaCommissionCommand}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{dx:DXImage 'Images/Actions/Refresh_16x16.png'}" Margin="-1 0 5 0"/>
                            <TextBlock Text="Resturar"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <dxe:TextEdit Text="{Binding SimulatedCommission, UpdateSourceTrigger=PropertyChanged}"
                              Grid.Column="5" Grid.Row="3" Margin="5 5 5 5" IsReadOnly="True" MaskCulture="en-US"
                              HorizontalContentAlignment="Right" MaskType="Numeric" Mask="{Binding FranchiseDecimalsCount}" MaskUseAsDisplayFormat="True"/>

                <!--rete iva-->
                <TextBlock Text="ReteIVA" Grid.Column="0" Grid.Row="4" Margin="0 5 0 5" VerticalAlignment="Center"/>
                <TextBlock Text="[MARGEN_RETE_IVA]" Grid.Column="1" Grid.Row="4" Margin="0 5 0 5" VerticalAlignment="Center" FontWeight="Bold"/>
                <dxe:TextEdit Text="{Binding ReteivaRate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              Grid.Column="2" Grid.Row="4" Margin="0 5 5 5" HorizontalContentAlignment="Right" MaskCulture="en-US"
                              MaskType="Numeric" MaskUseAsDisplayFormat="True" Mask="{Binding FranchiseDecimalsCount}"/>
                <dxe:TextEdit Text="{Binding FormulaReteiva, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              Grid.Column="3" Grid.Row="4" Margin="5 5 5 5" CharacterCasing="Upper"/>
                <Button Grid.Column="4" Grid.Row="4" Margin="5 5 5 5" Command="{Binding FranchiseResetFormulaReteivaCommand}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{dx:DXImage 'Images/Actions/Refresh_16x16.png'}" Margin="-1 0 5 0"/>
                            <TextBlock Text="Resturar"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <dxe:TextEdit Text="{Binding SimulatedReteiva, UpdateSourceTrigger=PropertyChanged}"
                              Grid.Column="5" Grid.Row="4" Margin="5 5 5 5" IsReadOnly="True" MaskCulture="en-US"
                              HorizontalContentAlignment="Right" MaskType="Numeric" Mask="{Binding FranchiseDecimalsCount}" MaskUseAsDisplayFormat="True"/>

                <!--rete ica-->
                <TextBlock Text="ReteICA" Grid.Column="0" Grid.Row="5" Margin="0 5 0 5" VerticalAlignment="Center"/>
                <TextBlock Text="[MARGEN_RETE_ICA]" Grid.Column="1" Grid.Row="5" Margin="0 5 0 5" VerticalAlignment="Center" FontWeight="Bold"/>
                <dxe:TextEdit Text="{Binding ReteicaRate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              Grid.Column="2" Grid.Row="5" Margin="0 5 5 5" HorizontalContentAlignment="Right" MaskCulture="en-US"
                              MaskType="Numeric" MaskUseAsDisplayFormat="True" Mask="{Binding FranchiseDecimalsCount}"/>
                <dxe:TextEdit Text="{Binding FormulaReteica, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              Grid.Column="3" Grid.Row="5" Margin="5 5 5 5" CharacterCasing="Upper"/>
                <Button Grid.Column="4" Grid.Row="5" Margin="5 5 5 5" Command="{Binding FranchiseResetFormulaReteicaCommand}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{dx:DXImage 'Images/Actions/Refresh_16x16.png'}" Margin="-1 0 5 0"/>
                            <TextBlock Text="Resturar"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <dxe:TextEdit Text="{Binding SimulatedReteica, UpdateSourceTrigger=PropertyChanged}"
                              Grid.Column="5" Grid.Row="5" Margin="5 5 5 5" IsReadOnly="True" MaskCulture="en-US"
                              HorizontalContentAlignment="Right" MaskType="Numeric" Mask="{Binding FranchiseDecimalsCount}" MaskUseAsDisplayFormat="True"/>

                <!--rete fuente-->
                <TextBlock Text="ReteFuente" Grid.Column="0" Grid.Row="6" Margin="0 5 0 5" VerticalAlignment="Center"/>
                <TextBlock Text="[MARGEN_RETE_FUENTE]" Grid.Column="1" Grid.Row="6" Margin="0 5 0 5" VerticalAlignment="Center" FontWeight="Bold"/>
                <dxe:TextEdit Text="{Binding RetefteRate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              Grid.Column="2" Grid.Row="6" Margin="0 5 5 5" HorizontalContentAlignment="Right" MaskCulture="en-US"
                              MaskType="Numeric" MaskUseAsDisplayFormat="True" Mask="{Binding FranchiseDecimalsCount}"/>
                <dxe:TextEdit Text="{Binding FormulaRetefte, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              Grid.Column="3" Grid.Row="6" Margin="5 5 5 5" CharacterCasing="Upper"/>
                <Button Grid.Column="4" Grid.Row="6" Margin="5 5 5 5" Command="{Binding FranchiseResetFormulaRetefteCommand}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{dx:DXImage 'Images/Actions/Refresh_16x16.png'}" Margin="-1 0 5 0"/>
                            <TextBlock Text="Resturar"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <dxe:TextEdit Text="{Binding SimulatedRetefte, UpdateSourceTrigger=PropertyChanged}"
                              Grid.Column="5" Grid.Row="6" Margin="5 5 5 5" IsReadOnly="True" MaskCulture="en-US"
                              HorizontalContentAlignment="Right" MaskType="Numeric" Mask="{Binding FranchiseDecimalsCount}" MaskUseAsDisplayFormat="True"/>

                <Button Grid.Column="5" Grid.Row="7" Margin="5 5 5 5" Command="{Binding FranchiseSimulatorCommand}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{dx:DXImage 'Images/Chart/ChangeChartSeriesType_16x16.png'}" Margin="-1 0 5 0"/>
                        <TextBlock Text="Simular"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>

        <!-- Row 1: Action buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,15">
            <Button Command="{Binding EditCommand}" IsEnabled="{Binding MasterCanEdit}"
                    Background="Transparent" BorderThickness="0" Padding="15,5" Cursor="Hand">
                <StackPanel HorizontalAlignment="Center">
                    <Image Source="{dx:DXImage 'Images/Edit/Edit_32x32.png'}" Width="32" Height="32" HorizontalAlignment="Center"/>
                    <TextBlock Text="Editar" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                </StackPanel>
            </Button>
            <Button Command="{Binding UndoCommand}" IsEnabled="{Binding MasterCanUndo}"
                    Background="Transparent" BorderThickness="0" Padding="15,5" Cursor="Hand">
                <StackPanel HorizontalAlignment="Center">
                    <Image Source="{dx:DXImage 'Images/History/Undo_32x32.png'}" Width="32" Height="32" HorizontalAlignment="Center"/>
                    <TextBlock Text="Deshacer" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                </StackPanel>
            </Button>
            <Button Command="{Binding SaveCommand}" IsEnabled="{Binding MasterCanSave}"
                    Background="Transparent" BorderThickness="0" Padding="15,5" Cursor="Hand">
                <StackPanel HorizontalAlignment="Center">
                    <Image Source="{dx:DXImage 'Images/Save/Save_32x32.png'}" Width="32" Height="32" HorizontalAlignment="Center"/>
                    <TextBlock Text="Guardar" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
