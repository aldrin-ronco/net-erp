<UserControl x:Class="NetErp.Treasury.Masters.Views.Editors.BankAccountEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:h="clr-namespace:NetErp.Helpers"
             xmlns:local="clr-namespace:NetErp.Treasury.Masters.Views.Editors">
    <UserControl.Resources>
        <h:CharToBooleanConverter x:Key="CharToBooleanConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Row 0: Form content -->
        <dx:DXTabControl Grid.Row="0" Background="Transparent"
                         TabContentCacheMode="CacheTabsOnSelecting"
                         HorizontalContentAlignment="Stretch"
                         Margin="20 0 0 0"
                         SelectedIndex="{Binding MasterSelectedIndex, UpdateSourceTrigger=PropertyChanged}">

            <dx:DXTabItem Header="Cuenta Bancaria">
                <Grid IsEnabled="{Binding IsEditing, UpdateSourceTrigger=PropertyChanged}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <dxe:TextEdit Grid.Row="0" Text="{Binding BankName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  Margin="0 0 0 10" IsReadOnly="True"/>

                    <dxe:CheckEdit Grid.Row="1" Content="Cuenta Activa" IsChecked="{Binding IsActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                   Margin="0 10 0 10" Style="{StaticResource BlueCheckedTextStyle}"/>

                    <TextBlock Text="Tipo" Grid.Row="2" Margin="0 10 0 5" FontWeight="Bold"/>

                    <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0 5 0 10" IsEnabled="{Binding IsNewRecord, UpdateSourceTrigger=PropertyChanged}">
                        <RadioButton Content="Ahorros" GroupName="Type" IsChecked="{Binding Type, Converter={StaticResource CharToBooleanConverter}, ConverterParameter=A, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding BankCaptureInfoAsRS, UpdateSourceTrigger=PropertyChanged}"/>
                        <RadioButton Content="Corriente" GroupName="Type" IsChecked="{Binding Type, Converter={StaticResource CharToBooleanConverter}, ConverterParameter=C, UpdateSourceTrigger=PropertyChanged}" Margin="5 0 5 0" IsEnabled="{Binding BankCaptureInfoAsRS, UpdateSourceTrigger=PropertyChanged}"/>
                        <RadioButton Content="Basada en número celular" GroupName="Type" IsChecked="{Binding Type, Converter={StaticResource CharToBooleanConverter}, ConverterParameter=M, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding BankCaptureInfoAsPN, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Grid.Row="4" Margin="0 10 0 10" IsEnabled="{Binding IsNewRecord, UpdateSourceTrigger=PropertyChanged}"
                                Visibility="{Binding BankCaptureInfoAsPN, UpdateSourceTrigger=PropertyChanged, Converter={dxmvvm:BooleanToVisibilityConverter}}">
                        <RadioButton Content="Nequi" GroupName="Provider" IsChecked="{Binding Provider, Converter={StaticResource CharToBooleanConverter}, ConverterParameter=N, UpdateSourceTrigger=PropertyChanged}"/>
                        <RadioButton Content="Daviplata" GroupName="Provider" IsChecked="{Binding Provider, Converter={StaticResource CharToBooleanConverter}, ConverterParameter=D, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <Grid Grid.Row="5" Margin="0 10 0 10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock FontWeight="Bold" Grid.Row="0" Grid.Column="0" Margin="0 0 10 5">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding BankCaptureInfoAsRS}" Value="True">
                                            <Setter Property="Text" Value="Número de la cuenta bancaria"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding BankCaptureInfoAsPN}" Value="True">
                                            <Setter Property="Text" Value="Número de teléfono celular"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <dxe:TextEdit Grid.Row="1" Grid.Column="0" Margin="0 5 10 0" Text="{Binding Number, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      x:Name="BankAccountNumber" MaskType="Simple">
                            <dxe:TextEdit.Style>
                                <Style TargetType="dxe:TextEdit">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding BankCaptureInfoAsRS}" Value="True">
                                            <Setter Property="Mask" Value="000-000000-00"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding BankCaptureInfoAsPN}" Value="True">
                                            <Setter Property="Mask" Value="000 000 00 00"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </dxe:TextEdit.Style>
                        </dxe:TextEdit>

                        <TextBlock Text="Referencia cta bancaria" FontWeight="Bold" Grid.Row="0" Grid.Column="1" Margin="10 0 0 5"/>
                        <dxe:TextEdit Grid.Row="1" Grid.Column="1" Margin="10 5 0 0" CharacterCasing="Upper"
                                      Text="{Binding Reference, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                    <StackPanel Grid.Row="6" Margin="0 10 0 5" Orientation="Horizontal">
                        <TextBlock Text="Cuenta Contable" FontWeight="Bold" Margin="0 0 10 0" VerticalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" Margin="10 0 0 0" Visibility="{Binding IsNewRecord, UpdateSourceTrigger=PropertyChanged, Converter={dxmvvm:BooleanToVisibilityConverter}}">
                            <RadioButton Content="Crear automáticamente" GroupName="AccountingAccount" IsChecked="{Binding AccountingAccountAutoCreate, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                            <RadioButton Content="Seleccionar existente" GroupName="AccountingAccount" IsChecked="{Binding AccountingAccountSelectExisting, UpdateSourceTrigger=PropertyChanged}" Margin="5 0 5 0"/>
                        </StackPanel>
                    </StackPanel>

                    <dxe:TextEdit Grid.Row="7" Margin="0 5 0 10" Text="{Binding Description, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                  IsReadOnly="True" Visibility="{Binding AccountingAccountAutoCreate, UpdateSourceTrigger=PropertyChanged, Converter={dxmvvm:BooleanToVisibilityConverter}}"/>

                    <dxg:LookUpEdit Grid.Row="7"
                                    Margin="0 5 0 10" Padding="3"
                                    AllowSpin="True"
                                    AutoPopulateColumns="False"
                                    x:Name="LookUpEdit"
                                    IsCaseSensitiveSearch="False"
                                    IncrementalFiltering="True"
                                    IncrementalSearch="True"
                                    ValidateOnTextInput="False"
                                    FilterCondition="Contains"
                                    ImmediatePopup="True"
                                    CharacterCasing="Upper"
                                    ClearSelectionOnBackspace="True"
                                    NullText="&lt;&lt; SELECCIONE UNA CUENTA CONTABLE &gt;&gt;"
                                    IsEnabled="{Binding IsNewRecord, UpdateSourceTrigger=PropertyChanged}"
                                    ItemsSource="{Binding BankAccountAccountingAccounts, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                    DisplayMember="FullName"
                                    GotFocus="LookUpEdit_GotFocus"
                                    PreviewMouseUp="LookUpEdit_PreviewMouseUp"
                                    ValueMember="Id"
                                    SelectedItem="{Binding SelectedAccountingAccount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Visibility="{Binding AccountingAccountSelectExisting, UpdateSourceTrigger=PropertyChanged, Converter={dxmvvm:BooleanToVisibilityConverter}}">
                        <dxg:LookUpEdit.PopupContentTemplate>
                            <ControlTemplate>
                                <dxg:GridControl Name="PART_GridControl">
                                    <dxg:GridControl.View>
                                        <dxg:TableView AutoWidth="True"/>
                                    </dxg:GridControl.View>
                                    <dxg:GridControl.Columns>
                                        <dxg:GridColumn Header="Código y nombre" FieldName="FullName"/>
                                    </dxg:GridControl.Columns>
                                </dxg:GridControl>
                            </ControlTemplate>
                        </dxg:LookUpEdit.PopupContentTemplate>
                        <dxg:LookUpEdit.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel/>
                            </ItemsPanelTemplate>
                        </dxg:LookUpEdit.ItemsPanel>
                    </dxg:LookUpEdit>

                    <TextBlock Text="Código" Margin="0 10 0 5" Grid.Row="8" FontWeight="Bold" Visibility="{Binding IsNewRecord, UpdateSourceTrigger=PropertyChanged, Converter={dxmvvm:BooleanToVisibilityConverter Inverse=True}}"/>
                    <Grid Grid.Row="9" Margin="0 5 0 10" Visibility="{Binding IsNewRecord, UpdateSourceTrigger=PropertyChanged, Converter={dxmvvm:BooleanToVisibilityConverter Inverse=True}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>

                        <dxe:TextEdit Grid.Column="0" IsReadOnly="True"
                                      Text="{Binding PaymentMethodAbbreviation, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>

                    <dxe:CheckEdit Grid.Row="10" Content="¿Desea habilitar esta cuenta bancaria como método de pago en venta?"
                                   IsChecked="{Binding EnablePaymentMethod, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                   Margin="0 10 0 10" Style="{StaticResource BlueCheckedTextStyle}"/>

                    <dxe:TextEdit Margin="0 5 0 0" Grid.Row="11" IsReadOnly="True"
                                  Text="{Binding PaymentMethodName, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                  Visibility="{Binding EnablePaymentMethod, UpdateSourceTrigger=PropertyChanged, Converter={dxmvvm:BooleanToVisibilityConverter}}"/>
                </Grid>
            </dx:DXTabItem>
            <!--<dx:DXTabItem Header="Centros de Costo">
                <Grid IsEnabled="{Binding IsEditing, UpdateSourceTrigger=PropertyChanged}">
                    <dxg:GridControl
                        Margin="0 8 0 0"
                        EnableSmartColumnsGeneration="True"
                        AutoGenerateColumns="None"
                        ItemsSource="{Binding CostCenters, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                        SelectedItem="{Binding SelectedCostCenter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <dxg:GridControl.View>
                            <dxg:TableView AllowCascadeUpdate="False"
                                           EnableSelectedRowAppearance="True"
                                           ShowGroupPanel="False" AlternateRowBackground="Beige"/>
                        </dxg:GridControl.View>

                        <dxg:GridColumn
                            Header="Nombre del centro de costo"
                            Width="*"
                            Binding="{Binding Name, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>

                        <dxg:GridColumn Width="30">
                            <dxg:GridColumn.CellTemplate>
                                <DataTemplate>
                                    <dxe:CheckEdit HorizontalAlignment="Center" VerticalAlignment="Center"
                                                   IsChecked="{Binding RowData.Row.IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </DataTemplate>
                            </dxg:GridColumn.CellTemplate>
                        </dxg:GridColumn>
                    </dxg:GridControl>
                </Grid>
            </dx:DXTabItem>-->
        </dx:DXTabControl>

        <!-- Row 1: Action buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,15">
            <Button Command="{Binding EditCommand}" IsEnabled="{Binding MasterCanEdit}"
                    Background="Transparent" BorderThickness="0" Padding="15,5" Cursor="Hand">
                <StackPanel HorizontalAlignment="Center">
                    <Image Source="{dx:DXImage 'Images/Edit/Edit_32x32.png'}" Width="32" Height="32" HorizontalAlignment="Center"/>
                    <TextBlock Text="Editar" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                </StackPanel>
            </Button>
            <Button Command="{Binding UndoCommand}" IsEnabled="{Binding MasterCanUndo}"
                    Background="Transparent" BorderThickness="0" Padding="15,5" Cursor="Hand">
                <StackPanel HorizontalAlignment="Center">
                    <Image Source="{dx:DXImage 'Images/History/Undo_32x32.png'}" Width="32" Height="32" HorizontalAlignment="Center"/>
                    <TextBlock Text="Deshacer" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                </StackPanel>
            </Button>
            <Button Command="{Binding SaveCommand}" IsEnabled="{Binding MasterCanSave}"
                    Background="Transparent" BorderThickness="0" Padding="15,5" Cursor="Hand">
                <StackPanel HorizontalAlignment="Center">
                    <Image Source="{dx:DXImage 'Images/Save/Save_32x32.png'}" Width="32" Height="32" HorizontalAlignment="Center"/>
                    <TextBlock Text="Guardar" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
