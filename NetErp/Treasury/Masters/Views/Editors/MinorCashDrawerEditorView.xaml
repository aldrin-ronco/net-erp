<UserControl x:Class="NetErp.Treasury.Masters.Views.Editors.MinorCashDrawerEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Row 0: Form content -->
        <dx:DXTabControl Grid.Row="0" Background="Transparent"
                         TabContentCacheMode="CacheTabsOnSelecting"
                         HorizontalContentAlignment="Stretch"
                         Margin="20 0 0 0"
                         SelectedIndex="{Binding MasterSelectedIndex, UpdateSourceTrigger=PropertyChanged}">

            <dx:DXTabItem Header="Datos de la caja">
                <Grid IsEnabled="{Binding IsEditing, UpdateSourceTrigger=PropertyChanged}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Almacén" Margin="0 0 0 5" Grid.Row="0"/>
                    <dxe:TextEdit Text="{Binding CostCenterName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="False"
                                Grid.Row="1" Margin="0 5 0 10"/>

                    <TextBlock Text="Nombre de la caja" Grid.Row="2" Margin="0 10 0 5"/>
                    <dxe:TextEdit Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  Grid.Row="3" Margin="0 5 0 0" CharacterCasing="Upper" x:Name="MinorCashDrawerName"/>
                </Grid>
            </dx:DXTabItem>
            <dx:DXTabItem Header="Contabilidad" Visibility="{Binding IsNewRecord, UpdateSourceTrigger=PropertyChanged, Converter={dxmvvm:BooleanToVisibilityConverter Inverse=True}}">
                <Grid IsEnabled="{Binding IsEditing, UpdateSourceTrigger=PropertyChanged}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Cuenta de efectivo" Margin="0 0 0 5" FontWeight="Bold" Grid.Row="0"/>
                    <dxg:LookUpEdit Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="1"
                       Margin="0 5 0 10" Padding="3"
                       AllowSpin="True"
                       AutoPopulateColumns="False"
                       IsCaseSensitiveSearch="False"
                       IncrementalFiltering="True"
                       IncrementalSearch="True"
                       ValidateOnTextInput="False"
                       FilterCondition="Contains"
                       ImmediatePopup="True"
                       ClearSelectionOnBackspace="True"
                       ItemsSource="{Binding CashDrawerAccountingAccounts, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                       DisplayMember="FullName"
                       ValueMember="Id"
                       SelectedItem="{Binding SelectedCashAccountingAccount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <dxg:LookUpEdit.PopupContentTemplate>
                            <ControlTemplate>
                                <dxg:GridControl Name="PART_GridControl">
                                    <dxg:GridControl.View>
                                        <dxg:TableView AutoWidth="True"/>
                                    </dxg:GridControl.View>
                                    <dxg:GridControl.Columns>
                                        <dxg:GridColumn Header="Nombre y código de la cuenta" FieldName="FullName"/>
                                    </dxg:GridControl.Columns>
                                </dxg:GridControl>
                            </ControlTemplate>
                        </dxg:LookUpEdit.PopupContentTemplate>
                        <dxg:LookUpEdit.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel/>
                            </ItemsPanelTemplate>
                        </dxg:LookUpEdit.ItemsPanel>
                    </dxg:LookUpEdit>
                </Grid>
            </dx:DXTabItem>
            <dx:DXTabItem Header="Otros datos">
                <Grid IsEnabled="{Binding IsEditing, UpdateSourceTrigger=PropertyChanged}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="8*"/>
                        <ColumnDefinition Width="21*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <dxe:CheckEdit Grid.Row="0" Content="¿Esta caja requiere cuadre diario?"
                       IsChecked="{Binding CashReviewRequired, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 0 10"
                                   Style="{StaticResource BlueCheckedTextStyle}" Grid.ColumnSpan="2"/>

                    <TextBlock Text="Ajustar automáticamente saldo al cerrar" Grid.Row="1" Margin="0 10 0 5" FontWeight="Bold" Grid.ColumnSpan="2"/>

                    <dxe:CheckEdit Grid.Row="2" IsChecked="{Binding AutoAdjustBalance, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                       Margin="0 0 0 10" Style="{StaticResource BlueCheckedTextStyle}" Grid.ColumnSpan="2">
                        <dxe:CheckEdit.Content>
                            <TextBlock>
                                Seleccione esta opción si desea que el sistema ajuste el saldo de la caja automáticamente para que concuerde con el resultado del arqueo,
                                <LineBreak/>
                                este ajuste será realizado por medio de un recibo de caja o un egreso automático.
                            </TextBlock>
                        </dxe:CheckEdit.Content>
                    </dxe:CheckEdit>
                </Grid>
            </dx:DXTabItem>
        </dx:DXTabControl>

        <!-- Row 1: Action buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,15">
            <Button Command="{Binding EditCommand}" IsEnabled="{Binding MasterCanEdit}"
                    Background="Transparent" BorderThickness="0" Padding="15,5" Cursor="Hand">
                <StackPanel HorizontalAlignment="Center">
                    <Image Source="{dx:DXImage 'Images/Edit/Edit_32x32.png'}" Width="32" Height="32" HorizontalAlignment="Center"/>
                    <TextBlock Text="Editar" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                </StackPanel>
            </Button>
            <Button Command="{Binding UndoCommand}" IsEnabled="{Binding MasterCanUndo}"
                    Background="Transparent" BorderThickness="0" Padding="15,5" Cursor="Hand">
                <StackPanel HorizontalAlignment="Center">
                    <Image Source="{dx:DXImage 'Images/History/Undo_32x32.png'}" Width="32" Height="32" HorizontalAlignment="Center"/>
                    <TextBlock Text="Deshacer" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                </StackPanel>
            </Button>
            <Button Command="{Binding SaveCommand}" IsEnabled="{Binding MasterCanSave}"
                    Background="Transparent" BorderThickness="0" Padding="15,5" Cursor="Hand">
                <StackPanel HorizontalAlignment="Center">
                    <Image Source="{dx:DXImage 'Images/Save/Save_32x32.png'}" Width="32" Height="32" HorizontalAlignment="Center"/>
                    <TextBlock Text="Guardar" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
