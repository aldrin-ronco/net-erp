<UserControl x:Class="NetErp.Treasury.Masters.Views.Editors.BankEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Row 0: Form content -->
        <Grid Grid.Row="0" Margin="20 0 0 0" IsEnabled="{Binding IsEditing, UpdateSourceTrigger=PropertyChanged}" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <TextBlock Text="CÃ³digo" Grid.Row="0" Margin="5 5 0 5" FontWeight="Bold"/>
            <dxe:TextEdit x:Name="BankCode" Grid.Row="1" Margin="5 0 0 5" MaxLength="2"
                          Text="{Binding Code, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          HorizontalAlignment="Left" Width="80"/>
            <TextBlock Text="Seleccione el tercero correspondiente a este banco" FontWeight="Bold" Grid.Row="2" Margin="5 5 0 5"/>
            <Grid Grid.Row="3" Margin="5 5 0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="6*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <dxe:TextEdit Text="{Binding AccountingEntityName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              Grid.Column="0" Margin="0 5 5 5" IsReadOnly="True"/>
                <Button Grid.Column="1" Margin="5 5 0 5" Width="auto" Command="{Binding SearchAccountingEntityCommand}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Buscar" VerticalAlignment="Center" Margin="0 0 5 0"/>
                        <Image Source="{dx:DXImage 'Images/Find/Find_16x16.png'}" Stretch="None">
                            <Image.Style>
                                <Style TargetType="Image">
                                    <Style.Triggers>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Opacity" Value=".5"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>

        <!-- Row 1: Action buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,15">
            <Button Command="{Binding EditCommand}" IsEnabled="{Binding MasterCanEdit}"
                    Background="Transparent" BorderThickness="0" Padding="15,5" Cursor="Hand">
                <StackPanel HorizontalAlignment="Center">
                    <Image Source="{dx:DXImage 'Images/Edit/Edit_32x32.png'}" Width="32" Height="32" HorizontalAlignment="Center"/>
                    <TextBlock Text="Editar" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                </StackPanel>
            </Button>
            <Button Command="{Binding UndoCommand}" IsEnabled="{Binding MasterCanUndo}"
                    Background="Transparent" BorderThickness="0" Padding="15,5" Cursor="Hand">
                <StackPanel HorizontalAlignment="Center">
                    <Image Source="{dx:DXImage 'Images/History/Undo_32x32.png'}" Width="32" Height="32" HorizontalAlignment="Center"/>
                    <TextBlock Text="Deshacer" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                </StackPanel>
            </Button>
            <Button Command="{Binding SaveCommand}" IsEnabled="{Binding MasterCanSave}"
                    Background="Transparent" BorderThickness="0" Padding="15,5" Cursor="Hand">
                <StackPanel HorizontalAlignment="Center">
                    <Image Source="{dx:DXImage 'Images/Save/Save_32x32.png'}" Width="32" Height="32" HorizontalAlignment="Center"/>
                    <TextBlock Text="Guardar" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
