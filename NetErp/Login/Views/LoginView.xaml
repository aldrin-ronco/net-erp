<UserControl x:Class="NetErp.Login.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:cal="http://caliburnmicro.com"
             xmlns:busyIndicator="https://github.com/moh3ngolshani/BusyIndicator"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200"
             FontFamily="Century Gothic">
    
    <UserControl.Resources>
        <!-- Gradientes corporativos -->
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#f8f9fa" Offset="0"/>
            <GradientStop Color="#e9ecef" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="LoginPanelGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#ffffff" Offset="0"/>
            <GradientStop Color="#f8f9fa" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- Estilo para botón principal -->
        <Style x:Key="LoginButtonStyle" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#007bff" Offset="0"/>
                        <GradientStop Color="#0056b3" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#0056b3" Offset="0"/>
                                            <GradientStop Color="#004085" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#6c757d"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="{StaticResource BackgroundGradient}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.8*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.8*"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Panel central de login -->
        <Border Grid.Column="1" 
                Grid.Row="1" 
                Background="{StaticResource LoginPanelGradient}"
                CornerRadius="12"
                Padding="40">
            <Border.Effect>
                <DropShadowEffect Color="#000000" 
                                Opacity="0.1" 
                                ShadowDepth="8" 
                                BlurRadius="20"/>
            </Border.Effect>
            
            <busyIndicator:BusyMask IsBusy="{Binding IsLoading}"
                                    IndicatorType="BouncingDot"
                                    BusyContent="Autenticando..."
                                    BusyContentMargin="0,20,0,0"
                                    IsBusyAtStartup="False">
                
                <StackPanel>
                    <!-- Logo empresarial -->
                    <Image Source="pack://application:,,,/Global/Resources/Images/QualityLogo.BMP" 
                           Width="180" 
                           Height="120" 
                           Margin="0,0,0,30"
                           HorizontalAlignment="Center"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                    
                    <!-- Título -->
                    <TextBlock Text="INICIAR SESIÓN" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,8"
                               Foreground="#2c3e50"/>
                    
                    <!-- Subtítulo -->
                    <TextBlock Text="Accede a tu cuenta empresarial" 
                               FontSize="14" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,40"
                               Foreground="#6c757d"/>
                    
                    <!-- Campo Email -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Correo electrónico" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,8"
                                   Foreground="#2c3e50"/>
                        
                        <dxe:ComboBoxEdit Text="{Binding Email, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                          ItemsSource="{Binding FilteredEmails}"
                                          IsTextEditable="True"
                                          FilterCondition="Contains"
                                          AutoComplete="True"
                                          IncrementalFiltering="True"
                                          ImmediatePopup="True"
                                          FontSize="14"
                                          Padding="10"
                                          Height="45"
                                          NullText="Ingresa tu correo electrónico"
                                          ShowNullTextForEmptyValue="True"
                                          BorderThickness="2">
                            <dxmvvm:Interaction.Behaviors>
                                <dxmvvm:KeyToCommand KeyGesture="Enter" Command="{Binding LoginCommand}"/>
                            </dxmvvm:Interaction.Behaviors>
                            <dxe:ComboBoxEdit.StyleSettings>
                                <dxe:ComboBoxStyleSettings/>
                            </dxe:ComboBoxEdit.StyleSettings>
                            <dxe:ComboBoxEdit.ItemContainerStyle>
                                <Style TargetType="dxe:ComboBoxEditItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Padding" Value="0"/>
                                </Style>
                            </dxe:ComboBoxEdit.ItemContainerStyle>
                            <dxe:ComboBoxEdit.ItemTemplate>
                                <DataTemplate>
                                    <Grid MinHeight="24" 
                                          HorizontalAlignment="Stretch">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="25"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Email text -->
                                        <TextBlock Grid.Column="0" 
                                                   Text="{Binding}" 
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Left"
                                                   Margin="8,4"
                                                   TextTrimming="CharacterEllipsis"/>
                                        
                                        <!-- Delete button -->
                                        <Button Grid.Column="1"
                                                Content="×"
                                                Width="18"
                                                Height="18"
                                                FontSize="12"
                                                FontWeight="Bold"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Foreground="#dc3545"
                                                Cursor="Hand"
                                                ToolTip="Eliminar email guardado"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                cal:Message.Attach="[Event Click] = [Action RemoveEmailAsync($dataContext)]"
                                                cal:Action.TargetWithoutContext="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=DataContext}">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}" 
                                                                        CornerRadius="9">
                                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                                    VerticalAlignment="Center"/>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Background" Value="#f8d7da"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </dxe:ComboBoxEdit.ItemTemplate>
                        </dxe:ComboBoxEdit>
                    </StackPanel>
                    
                    <!-- Campo Contraseña -->
                    <StackPanel Margin="0,0,0,30">
                        <TextBlock Text="Contraseña" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,8"
                                   Foreground="#2c3e50"/>
                        
                        <dxe:PasswordBoxEdit x:Name="PasswordBox"
                                     Password="{Binding Password, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                     FontSize="14"
                                     Padding="10"
                                     Height="45"
                                     BorderThickness="2"
                                     NullValue=""
                                     ShowPasswordButtonVisibility="Auto"
                                     cal:Message.Attach="[Event PasswordChanged] = [Action OnPasswordChanged($source, $eventArgs)]; [Event KeyDown] = [Action OnKeyDown($eventArgs)]"/>
                    </StackPanel>
                    
                    <!-- Botón de login -->
                    <Button Content="{Binding LoginButtonText}"
                            Style="{StaticResource LoginButtonStyle}"
                            Height="50"
                            Margin="0,0,0,20"
                            IsEnabled="{Binding CanLogin}"
                            cal:Message.Attach="[Event Click] = [Action LoginAsync()]"/>
                    
                    <!-- Información adicional -->
                    <TextBlock Text="¿Problemas para acceder? Contacta al administrador del sistema" 
                               FontSize="12" 
                               HorizontalAlignment="Center" 
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Foreground="#6c757d"/>
                </StackPanel>
            </busyIndicator:BusyMask>
        </Border>
        
        <!-- Información de versión (esquina inferior derecha) -->
        <TextBlock Grid.Column="2" 
                   Grid.Row="2" 
                   Text="AQUÍ VA LA VERSIÓN DEL SISTEMA" 
                   FontSize="10" 
                   HorizontalAlignment="Right" 
                   VerticalAlignment="Bottom" 
                   Margin="0,0,20,20"
                   Foreground="#adb5bd"/>
    </Grid>
</UserControl>
