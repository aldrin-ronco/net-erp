<UserControl x:Class="NetErp.Books.Tax.Views.TaxDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetErp.Books.Tax.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:busyIndicator="https://github.com/moh3ngolshani/BusyIndicator"
            xmlns:cal="http://caliburnmicro.com"
            xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon"
            xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
            xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
            xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
            xmlns:config="clr-namespace:Common.Config;assembly=Common"
            xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
            xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
            xmlns:h="clr-namespace:NetErp.Helpers"
            xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors">
    <busyIndicator:BusyMask x:Name="BusyIndicator"
     IsBusy="{Binding IsBusy}"
     IndicatorType="BouncingDot"
     BusyContent="Please wait..."
     BusyContentMargin="0,20,0,0"
     IsBusyAtStartup="False">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />

                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <dxr:RibbonControl Grid.Column="0" Grid.ColumnSpan="3" IsSimplified="False"
               AllowSimplifiedRibbon="True" ShowApplicationButton="False" ToolbarShowMode="Hide"
               RibbonStyle="Office2010" ToolbarShowCustomizationButton="False"
               RibbonTitleBarVisibility="Collapsed" VerticalAlignment="Center"> 

                <dxr:RibbonPage Caption="General">

                    <dxr:RibbonPageGroup Caption="Acciones">
                        <dxb:BarButtonItem x:Name="btnBack"
               Glyph="{dx:DXImage 'Images/Navigation/Backward_16x16.png'}"
               LargeGlyph="{dx:DXImage 'Images/Navigation/Backward_32x32.png'}"
               Content="Regresar"
               RibbonStyle="Large"
               Hint="Regresa a la lista"
               Command="{Binding Path=GoBackCommand}" />
                        <dxb:BarItemSeparator />
                        <dxb:BarButtonItem
               x:Name="btnSave"
               Glyph="{dx:DXImage 'Images/Save/Save_16x16.png'}"
               LargeGlyph="{dx:DXImage 'Images/Save/Save_32x32.png'}"
               Content="Guardar"
               RibbonStyle="Large"
               IsEnabled="{Binding Path=CanSave, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
               Hint="Guardar">
                            <dxmvvm:Interaction.Behaviors>
                                <dxmvvm:EventToCommand Command="{Binding Path=SaveCommand}"
                       EventName="ItemClick" />
                            </dxmvvm:Interaction.Behaviors>
                        </dxb:BarButtonItem>
                        <dxb:BarItemSeparator />

                        <dxb:BarItemLinkSeparator />
                    </dxr:RibbonPageGroup>
                </dxr:RibbonPage>
            </dxr:RibbonControl>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*" />
                    <ColumnDefinition Width="7*" />
                    <ColumnDefinition Width="1.5*" />

                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="150" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="150" />


                </Grid.RowDefinitions>
                <Grid Grid.Column="1" Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Margin="10 5 0 5" Orientation="Vertical"  >
                                        <TextBlock Text="Selecciona un tipo de impuesto" Margin="0 0 0 2" />
                                        <dxe:ComboBoxEdit
                         Padding="2"
                         ItemsSource="{Binding Path=TaxTypes, UpdateSourceTrigger=PropertyChanged}"
                         IsTextEditable="False"
                         DisplayMember="Name"
                         EditValue="{Binding SelectedTaxTypeGraphQLModel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            IsSynchronizedWithCurrentItem="True" />
                    </StackPanel>
                    <StackPanel Grid.Row="1" Margin="10 5 0 5" Orientation="Vertical" >
                        <TextBlock Text="NOMBRE DEL IMPUESTO" Margin="0 0 0 2" />
                        <dxe:TextEdit
                         Padding="2"
                         Text="{Binding Path=Name, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                         CharacterCasing="Upper"
                         x:Name="Name"
                         Margin="0 0 0 2" />
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="10 5 0 5"
                    Grid.Row="2" Grid.Column="1">
                        <TextBlock Text="Margen"
                        Margin="0 0 0 2" />
                        <dxe:SpinEdit MinValue="0" Increment="1"
                        Padding="2"
                        Text="{Binding Path=Margin, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                        CharacterCasing="Upper"
                       
                        IsFloatValue="False"
                        MaskType="Numeric"
                        x:Name="Margin"
                        Margin="0 0 0 2" />
                    </StackPanel>
                    <TextBlock Grid.Row="3" Text="IMPUESTO GENERADO"
                     FontWeight="Bold"
                     Margin="6 5 0 5" />
                    <StackPanel Grid.Row="4" Margin="6 5 0 5" Orientation="Vertical" >
                        <TextBlock Text="Operación" Margin="0 0 0 2" />
                        <dxe:ComboBoxEdit
                        Padding="2"
                        ItemsSource="{Binding Path=AccountingAccountOperations, UpdateSourceTrigger=PropertyChanged}"
                        IsTextEditable="False"
                        DisplayMember="FullName"
                        IsEnabled="{Binding IsEnabledSelectedGeneratedTaxAccount, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"

                        EditValue="{Binding SelectedGeneratedTaxAccount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           IsSynchronizedWithCurrentItem="True" />
                    </StackPanel>
                    <StackPanel Grid.Row="5" Margin="6 5 0 5" Orientation="Vertical" >
                        <TextBlock Text="Devolución" Margin="0 0 0 2" />
                        <dxe:ComboBoxEdit
                        Padding="2"
                        ItemsSource="{Binding Path=AccountingAccountDevolutions, UpdateSourceTrigger=PropertyChanged}"
                        IsTextEditable="False"
                        DisplayMember="FullName"
                        IsEnabled="{Binding IsEnabledSelectedGeneratedTaxRefundAccount, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"

                        EditValue="{Binding SelectedGeneratedTaxRefundAccount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           IsSynchronizedWithCurrentItem="True" />
                    </StackPanel>
                    <TextBlock Grid.Row="6" Text="IMPUESTO DESCONTABLE"
                      FontWeight="Bold"
                      Margin="6 5 0 5" />
                        <StackPanel Grid.Row="7" Margin="6 5 0 5" Orientation="Vertical" >
                        <TextBlock Text="Operación" Margin="0 0 0 2" />
                        <dxe:ComboBoxEdit
                        Padding="2"
                        ItemsSource="{Binding Path=AccountingAccountOperations, UpdateSourceTrigger=PropertyChanged}"
                        IsTextEditable="False"
                        DisplayMember="FullName"
                        IsEnabled="{Binding IsEnabledSelectedDeductibleTaxAccount, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"

                        EditValue="{Binding SelectedDeductibleTaxAccount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           IsSynchronizedWithCurrentItem="True" />
                    </StackPanel>
                    <StackPanel Grid.Row="8" Margin="6 5 0 5" Orientation="Vertical" >
                        <TextBlock Text="Devolución" Margin="0 0 0 2" />
                        <dxe:ComboBoxEdit
                        Padding="2"
                        ItemsSource="{Binding Path=AccountingAccountDevolutions, UpdateSourceTrigger=PropertyChanged}"
                        IsTextEditable="False"
                        DisplayMember="FullName"
                        IsEnabled="{Binding IsEnabledSelectedDeductibleTaxRefundAccount, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"

                        EditValue="{Binding SelectedDeductibleTaxRefundAccount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           IsSynchronizedWithCurrentItem="True" />
                    </StackPanel>
                    <dxe:CheckEdit Content="Impuesto Activo" Grid.Row="9"
                     Margin="6 5 0 5"
                     Style="{StaticResource BlueCheckedTextStyle}"
                     Padding="2"
                     IsChecked="{Binding IsActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
            </Grid>

        </Grid>
    </busyIndicator:BusyMask>
</UserControl>
