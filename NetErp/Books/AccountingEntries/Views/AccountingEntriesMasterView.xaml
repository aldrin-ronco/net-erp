<UserControl x:Class="NetErp.Books.AccountingEntries.Views.AccountingEntriesMasterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetErp.Books.AccountingEntries.Views"
             xmlns:h="clr-namespace:NetErp.Helpers"
             xmlns:uc="clr-namespace:NetErp.UserControls"
             xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
             xmlns:busyIndicator="https://github.com/moh3ngolshani/BusyIndicator"
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="800" FontFamily="Century Gothic">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <h:SimpleBooleanConverter x:Key="SimpleBooleanConverter" True="False" False="True"/>
        <h:CheckBoxForeColorConverter x:Key="CheckBoxForeColorConverter"/>
        <h:BindingProxy x:Key="DataContextProxy" Data="{Binding}"/>
    </UserControl.Resources>
    <busyIndicator:BusyMask x:Name="BusyIndicator"
                            IndicatorType="BouncingDot"
                            BusyContent="Please wait..."
                            BusyContentMargin="0,20,0,0"
                            IsBusyAtStartup="False"
                            IsBusy="{Binding Path=IsBusy, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!--Toolbar-->
            <dxr:RibbonControl Grid.Column="0" Grid.ColumnSpan="3" IsSimplified="False" 
                           AllowSimplifiedRibbon="True" ShowApplicationButton="False" ToolbarShowMode="Hide" 
                           RibbonStyle="Office2010" ToolbarShowCustomizationButton="False" RibbonTitleBarVisibility="Collapsed" VerticalAlignment="Center">

                <dxr:RibbonPage Caption="General">

                    <dxr:RibbonPageGroup Caption="Acciones">
                        <dxb:BarButtonItem Glyph="{dx:DXImage 'Images/Actions/AddFile_16x16.png'}" 
                                           LargeGlyph="{dx:DXImage 'Images/Actions/AddFile_32x32.png'}" 
                                           Content="Nuevo"
                                           RibbonStyle="Large"
                                           IsEnabled="{Binding Path=IsBusy, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={dxmvvm:BooleanToVisibilityConverter Inverse=True}}"
                                           Hint="Crear un nuevo comprobante">
                            <dxmvvm:Interaction.Behaviors>
                                <dxmvvm:EventToCommand Command="{Binding Path=CreateAccountingEntryCommand}" EventName="ItemClick"/>
                            </dxmvvm:Interaction.Behaviors>
                        </dxb:BarButtonItem>
                        <dxb:BarItemSeparator/>
                        <dxb:BarButtonItem Content="Eliminar" 
                                           Glyph="{dx:DXImage 'Images/Actions/DeleteList_16x16.png'}" 
                                           LargeGlyph="{dx:DXImage 'Images/Actions/DeleteList_32x32.png'}"                                             
                                           Description="Eliminar"
                                           Hint="Eliminar comprobantes"    
                                           IsEnabled="{Binding Path=CanDeleteEntry, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                           RibbonStyle="Large">
                            <dxmvvm:Interaction.Behaviors>
                                <dxmvvm:EventToCommand 
                                    Command="{Binding Path=DeleteEntryCommand}" EventName="ItemClick"
                                   
                                    />
                            </dxmvvm:Interaction.Behaviors>
                        </dxb:BarButtonItem>
                        <dxb:BarItemLinkSeparator/>
                    </dxr:RibbonPageGroup>
                </dxr:RibbonPage>
            </dxr:RibbonControl>
            <!--Tabs-->
            <dx:DXTabControl Width="auto" Height="auto" Grid.Row="1" Margin="4">
                <dx:DXTabItem Padding="10" IsSelected="{Binding Path=IsSelectedTab1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <dx:DXTabItem.Header>
                        <TextBlock Text="Buscar Comprobante" FontSize="15"/>
                    </dx:DXTabItem.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.2*"/>
                            <ColumnDefinition Width="7.6*"/>
                            <ColumnDefinition Width="1.2*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <!--Libro Contable-->
                        <CheckBox Grid.Row="0" Grid.Column="0"
                                  Content="Libro contable"
                                  VerticalContentAlignment="Center"
                                  Margin="4" Padding="3" Grid.ColumnSpan="2"
                                  FontSize="15"
                                  Foreground="{Binding Path=SearchOnAccountingBook, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource CheckBoxForeColorConverter}}"
                                  IsChecked="{Binding Path=SearchOnAccountingBook, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"></CheckBox>
                        <dxe:ComboBoxEdit Grid.Row="0" Grid.Column="1"
                                  Margin="4, 6, 4, 4" Padding="2"
                                  Visibility="{Binding Path=SearchOnAccountingBook, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanToVisibilityConverter}}"
                                  ItemsSource="{Binding Path=AccountingBooks, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  DisplayMember="Name"
                                  ValueMember="Id"
                                  VerticalContentAlignment="Center"
                                  EditValue="{Binding Path=SelectedAccountingBookId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <!--Centro de Costo-->
                        <CheckBox Grid.Row="1" Grid.Column="0"
                                  Content="Centro de costo" 
                                  VerticalContentAlignment="Center"
                                  Margin="4" Padding="3" Grid.ColumnSpan="2"
                                  FontSize="15"
                                  Foreground="{Binding Path=SearchOnCostCenter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource CheckBoxForeColorConverter}}"
                                  IsChecked="{Binding Path=SearchOnCostCenter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <dxe:ComboBoxEdit Grid.Row="1" Grid.Column="1"
                                  Margin="4" Padding="2"
                                  DisplayMember="Name" IsTextEditable="False"
                                  ValueMember="Id"
                                  VerticalContentAlignment="Center"
                                  EditValue="{Binding Path=SelectedCostCenterId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  Visibility="{Binding Path=SearchOnCostCenter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanToVisibilityConverter}}"
                                  ItemsSource="{Binding Path=CostCenters, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <!--Fuente Contable-->
                        <CheckBox Grid.Row="2" Grid.Column="0"
                                  Content="Fuente contable"
                                  VerticalContentAlignment="Center"
                                  Margin="4" Padding="3" Grid.ColumnSpan="2"
                                  FontSize="15"
                                  Foreground="{Binding Path=SearchOnAccountingSource, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource CheckBoxForeColorConverter}}"
                                  IsChecked="{Binding Path=SearchOnAccountingSource, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <dxe:ComboBoxEdit Grid.Row="2" Grid.Column="1"
                                  Margin="4" Padding="2" IsTextEditable="False"
                                  DisplayMember="Name"
                                  ValueMember="Id"
                                  VerticalContentAlignment="Center"
                                  EditValue="{Binding Path=SelectedAccountingSourceId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  Visibility="{Binding Path=SearchOnAccountingSource, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanToVisibilityConverter}}"
                                  ItemsSource="{Binding Path=AccountingSources, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <!--Fecha-->
                        <CheckBox Grid.Row="3" Grid.Column="0"
                                  Content="Fecha"
                                  VerticalContentAlignment="Center"
                                  VerticalAlignment="Center"
                                  Margin="4" Padding="3" Grid.ColumnSpan="2"
                                  FontSize="15"
                                  Foreground="{Binding Path=SearchOnDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource CheckBoxForeColorConverter}}"
                                  IsChecked="{Binding Path=SearchOnDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <StackPanel Orientation="Horizontal" 
                                    Grid.Row="3" Grid.Column="1" 
                                    Margin="4"
                                    Visibility="{Binding Path=SearchOnDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <ComboBox Width="70" Margin="0 0 8 0" Padding="3"
                                      DisplayMemberPath="Value"
                                      SelectedValuePath="Key"
                                      SelectedValue="{Binding Path=SelectedDateFilterOption, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      HorizontalContentAlignment="Center"
                                      ItemsSource="{Binding Path=DateFilterOptions, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                            <DatePicker Width="105" 
                                        Margin="0 0 8 0" Padding="3"
                                        SelectedDate="{Binding Path=StartDateFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            <DatePicker Width="105" Padding="3"
                                        SelectedDate="{Binding Path=EndDateFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Visibility="{Binding Path=IsDateRange, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        </StackPanel>
                        <!--Numero de documento-->
                        <CheckBox Grid.Row="4" Grid.Column="0"
                                  Content="Número de documento" 
                                  VerticalContentAlignment="Center"
                                  Margin="4" Padding="3" Grid.ColumnSpan="2"
                                  FontSize="15"
                                  Foreground="{Binding Path=SearchOnDocumentNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource CheckBoxForeColorConverter}}"
                                  IsChecked="{Binding Path=SearchOnDocumentNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <dxe:TextEdit Grid.Row="4" Grid.Column="1"
                                 Width="120" 
                                 HorizontalAlignment="Left"
                                 HorizontalContentAlignment="Center"
                                 MaxLength="9"
                                 Margin="4" Padding="2"
                                 x:Name="DocumentNumber"
                                 Text="{Binding Path=DocumentNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Visibility="{Binding Path=SearchOnDocumentNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <!--Tercero-->
                        <CheckBox Grid.Row="5" Grid.Column="0"
                                  Content="Tercero" 
                                  VerticalContentAlignment="Center"                              
                                  Margin="4" Padding="3" Grid.ColumnSpan="2"
                                  FontSize="15"
                                  Foreground="{Binding Path=SearchOnAccountingEntity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource CheckBoxForeColorConverter}}"
                                  IsChecked="{Binding Path=SearchOnAccountingEntity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <Grid Grid.Row="5" Grid.Column="1" 
                              Margin="4"
                              Visibility="{Binding Path=SearchOnAccountingEntity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="0.3*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>

                            <dxe:ComboBoxEdit Grid.Row="0" Grid.Column="0" 
                                  Margin="0,0,8,0" 
                                  Padding="3"
                                  VerticalContentAlignment="Center" 
                                  IsTextEditable="False"
                                  Visibility="{Binding Path=IsFilterSearchAccountinEntityOnEditMode, Converter={StaticResource SimpleBooleanConverter}}"
                                  x:Name="SelectedAccountingEntityId"
                                  DisplayMember="SearchName"
                                  ValueMember="Id"
                                  EditValue="{Binding Path=SelectedAccountingEntityId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  ItemsSource="{Binding Path=AccountingEntitiesSearchResults}"
                                  ApplyItemTemplateToSelectedItem="False">
                                <dxe:ComboBoxEdit.ItemTemplate>

                                    <DataTemplate>
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock Text="{Binding Path=SearchName}"/>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Nit."  Foreground="Gray" FontSize="12"/>
                                                <TextBlock Text="{Binding Path=IdentificationNumberWithVerificationDigit}"
                                                            Foreground="Gray" FontSize="12"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </DataTemplate>

                                </dxe:ComboBoxEdit.ItemTemplate>

                                <dxe:ComboBoxEdit.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel/>
                                    </ItemsPanelTemplate>
                                </dxe:ComboBoxEdit.ItemsPanel>
                            </dxe:ComboBoxEdit>
                            <dxe:TextEdit Grid.Row="0" Grid.Column="0" Margin="0 0 8 0" Padding="2"
                                                   CharacterCasing="Upper"
                                                   NullText="Digite por lo menos 3 caracteres y presiona el boton Buscar"
                                                   FontSize="13"
                                                   ShowNullTextIfFocused="True"
                                                   Width="auto"
                                                   x:Name="FilterSearchAccountingEntity"             
                                                   VerticalContentAlignment="Center"
                                                   Text="{Binding Path=FilterSearchAccountingEntity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                   Visibility="{Binding Path=IsFilterSearchAccountinEntityOnEditMode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <Button Grid.Row="0" Grid.Column="1"
                                    Padding="3"
                                    x:Name="SearchForAccountingEntityMatch">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Margin="0 0 5 0" Width="16">
                                            <Image.Style>
                                                <Style TargetType="Image">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter Property="Opacity" Value="0.5" />
                                                        </Trigger>
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{Binding IsFilterSearchAccountinEntityOnEditMode}" Value="true"/>
                                                            </MultiDataTrigger.Conditions>
                                                            <Setter Property="Source" Value="{dx:DXImage 'Images/Print/Preview_16x16.png'}"/>
                                                        </MultiDataTrigger>
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{Binding IsFilterSearchAccountinEntityOnEditMode}" Value="false"/>
                                                            </MultiDataTrigger.Conditions>
                                                            <Setter Property="Source" Value="{dx:DXImage 'Images/History/Undo_16x16.png'}"/>
                                                        </MultiDataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style>
                                        </Image>
                                        <TextBlock Text="{Binding Path=FilterSearchButtonInfo, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                                   Margin="0 4 0 4" VerticalAlignment="Center"/>
                                        </StackPanel>
                                </Button.Content>
                            </Button>
                        </Grid>
                        <!--Boton ejecutar busqueda-->
                        <Button Grid.Row="5" Grid.Column="2" Margin="4 4 0 4" Padding="2" x:Name="SearchAccountingEntriesAsync">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Image Source="{dx:DXImage 'Images/Spreadsheet/FunctionsLookupAndReference_16x16.png'}" Margin="0 0 4 0" Width="16"/>
                                    <TextBlock Text="BUSCAR COMPROBANTE" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                        <!--DataGrid-->
                        <DataGrid Grid.Row="6" Grid.Column="0"
                                  Grid.ColumnSpan="3"
                                  Margin="0 8 0 0"
                                  AutoGenerateColumns="False" 
                                  VerticalGridLinesBrush="LightGray"
                                  HorizontalGridLinesBrush="LightGray"
                                  BorderThickness="0"
                                  CanUserAddRows="False"
                                  GridLinesVisibility="Horizontal"
                                  SelectionMode="Single"
                                  SelectionUnit="FullRow"     
                                  MinRowHeight="30"                                  
                                  AlternatingRowBackground="Beige"
                                  ItemsSource="{Binding Path=AccountingEntriesMaster, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  SelectedItem="{Binding Path=SelectedAccountingEntry, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  Background="Transparent"
                                  CanUserDeleteRows="False">
                            <DataGrid.CellStyle>
                                <Style TargetType="{x:Type DataGridCell}">
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGrid.CellStyle>
                            <DataGrid.Columns>
                                <!--Check para eliminar comprobante-->
                                <DataGridTemplateColumn Width="30">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox cal:Message.Attach="[Event Checked] = [Action OnChecked];[Event Unchecked] = [Action OnUnchecked]"
                                                      IsChecked="{Binding IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                      HorizontalAlignment="Center" VerticalAlignment="Center">
                                            </CheckBox>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                
                                <!--Fecha del documento-->
                                <DataGridTextColumn Header="Fecha Comp."
                                                    Binding="{Binding Path=DocumentDate, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:dd/MM/yyyy}}"
                                                    FontSize="14"                                                 
                                                    Width="auto">
                                    <DataGridTextColumn.HeaderStyle>
                                        <Style TargetType="{x:Type DataGridColumnHeader}">
                                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.HeaderStyle>
                                    <DataGridTextColumn.CellStyle>
                                        <Style TargetType="{x:Type DataGridCell}">
                                            <Setter Property="Padding" Value="5 0 5 0"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                                                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" />
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding State}" Value="X">
                                                    <Setter Property="Foreground" Value="Red"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding State}" Value="A">
                                                    <Setter Property="Foreground" Value="Red"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>
                                <!--Fuente del documento-->
                                <DataGridTextColumn Header="Fuente contable"
                                                    Width="auto"
                                                    FontSize="14"
                                                    Binding="{Binding Path=AccountingSource.Name, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
                                    <DataGridTextColumn.HeaderStyle>
                                        <Style TargetType="{x:Type DataGridColumnHeader}">
                                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.HeaderStyle>
                                    <DataGridTextColumn.CellStyle>
                                        <Style TargetType="{x:Type DataGridCell}">
                                            <Setter Property="Padding" Value="5 0 5 0"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                                                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding State}" Value="X">
                                                    <Setter Property="Foreground" Value="Red"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding State}" Value="A">
                                                    <Setter Property="Foreground" Value="Red"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>
                                <!--Numero del documento-->
                                <DataGridTextColumn Header="Número"
                                                    Binding="{Binding Path=DocumentNumber, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                                    Width="auto"
                                                    FontSize="14">
                                    <DataGridTextColumn.HeaderStyle>
                                        <Style TargetType="{x:Type DataGridColumnHeader}">
                                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.HeaderStyle>
                                    <DataGridTextColumn.CellStyle>
                                        <Style TargetType="{x:Type DataGridCell}">
                                            <Setter Property="Padding" Value="5 0 5 0"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                                                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding State}" Value="X">
                                                    <Setter Property="Foreground" Value="Red"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding State}" Value="A">
                                                    <Setter Property="Foreground" Value="Red"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>
                                <!--Descripcion del documento-->
                                <DataGridTextColumn Header="Descripción del comprobante"
                                                    Binding="{Binding Path=Description, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                                    Width="*"
                                                    FontSize="14">
                                    <DataGridTextColumn.HeaderStyle>
                                        <Style TargetType="{x:Type DataGridColumnHeader}">
                                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.HeaderStyle>
                                    <DataGridTextColumn.CellStyle>
                                        <Style TargetType="{x:Type DataGridCell}">
                                            <Setter Property="Padding" Value="5 0 5 0"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                                                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding State}" Value="X">
                                                    <Setter Property="Foreground" Value="Red"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding State}" Value="A">
                                                    <Setter Property="Foreground" Value="Red"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>
                                <!--Creado Por-->
                                <DataGridTextColumn Header="Creado Por"
                                                    Width="auto"
                                                    FontSize="14"
                                                    Binding="{Binding Path=CreatedBy, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
                                    <DataGridTextColumn.HeaderStyle>
                                        <Style TargetType="{x:Type DataGridColumnHeader}">
                                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.HeaderStyle>
                                    <DataGridTextColumn.CellStyle>
                                        <Style TargetType="{x:Type DataGridCell}">
                                            <Setter Property="Padding" Value="5 0 5 0"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                                                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding State}" Value="X">
                                                    <Setter Property="Foreground" Value="Red"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding State}" Value="A">
                                                    <Setter Property="Foreground" Value="Red"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>
                                <!--Fecha de creacion-->
                                <DataGridTextColumn Header="Fecha Creación"
                                                    Binding="{Binding Path=CreatedAt, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:dd/MM/yyyy hh:mm tt}}"
                                                    FontSize="14"                                                    
                                                    Width="auto">
                                    <DataGridTextColumn.HeaderStyle>
                                        <Style TargetType="{x:Type DataGridColumnHeader}">
                                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.HeaderStyle>
                                    <DataGridTextColumn.CellStyle>
                                        <Style TargetType="{x:Type DataGridCell}">
                                            <Setter Property="Padding" Value="5 0 5 0"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                                                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding State}" Value="X">
                                                    <Setter Property="Foreground" Value="Red"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding State}" Value="A">
                                                    <Setter Property="Foreground" Value="Red"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>
                                <!--Centro de costo-->
                                <DataGridTextColumn Header="Centro de costo"
                                                    Width="auto"
                                                    FontSize="14"
                                                    Binding="{Binding Path=CostCenter.Name, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
                                    <DataGridTextColumn.HeaderStyle>
                                        <Style TargetType="{x:Type DataGridColumnHeader}">
                                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.HeaderStyle>
                                    <DataGridTextColumn.CellStyle>
                                        <Style TargetType="{x:Type DataGridCell}">
                                            <Setter Property="Padding" Value="5 0 5 0"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type DataGridCell}">
