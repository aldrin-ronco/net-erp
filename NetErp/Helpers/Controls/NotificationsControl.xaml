<UserControl x:Class="NetErp.Helpers.Controls.NotificationsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:services="clr-namespace:NetErp.Helpers.Services"
             xmlns:cal="http://caliburnmicro.com"
             xmlns:local="clr-namespace:NetErp.Helpers.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <ItemsControl ItemsSource="{Binding Source={x:Static services:NotificationService.GlobalNotifications}}"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Bottom"
                  Margin="0,0,20,20">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <StackPanel VerticalAlignment="Bottom" 
                            HorizontalAlignment="Right"/>
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <Border CornerRadius="4" 
                        Margin="0,0,0,10" 
                        Background="{Binding Background}"
                        MinWidth="300" MaxWidth="400">
                    
                    <Border.Effect>
                        <DropShadowEffect Color="Black" 
                                 Direction="315"
                                 ShadowDepth="3"
                                 BlurRadius="5"
                                 Opacity="0.3"/>
                    </Border.Effect>
                    
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Icono -->
                        <TextBlock Grid.Row="0" Grid.RowSpan="2" Grid.Column="0"
                                   Text="{Binding Symbol}"
                                   Foreground="White"
                                   FontSize="24"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>

                        <!-- Título -->
                        <TextBlock Grid.Row="0" Grid.Column="1"
                                   Text="{Binding Title}"
                                   Foreground="White"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,4"/>

                        <!-- Mensaje -->
                        <TextBlock Grid.Row="1" Grid.Column="1"
                                   Text="{Binding Message}"
                                   Foreground="White"
                                   TextWrapping="Wrap"/>

                        <!-- Botón cerrar -->
                        <Button Grid.Row="0" Grid.Column="2"
                                Content="×"
                                FontSize="16"
                                Foreground="White"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="5,0"
                                Click="CloseButton_Click"/>
                    </Grid>
                </Border>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>
