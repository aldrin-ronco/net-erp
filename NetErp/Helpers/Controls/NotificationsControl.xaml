<UserControl x:Class="NetErp.Helpers.Controls.NotificationsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:services="clr-namespace:NetErp.Helpers.Services"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:cal="http://caliburnmicro.com"
             xmlns:local="clr-namespace:NetErp.Helpers.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <ItemsControl ItemsSource="{Binding Source={x:Static services:NotificationService.GlobalNotifications}}"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Bottom"
                  Margin="0,0,20,20">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <StackPanel VerticalAlignment="Bottom" 
                            HorizontalAlignment="Right"/>
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <Border CornerRadius="4" 
                        Margin="0,0,0,10" 
                        Background="{Binding Background}"
                        MinWidth="300" MaxWidth="400">
                    
                    <Border.Effect>
                        <DropShadowEffect Color="Black" 
                                 Direction="315"
                                 ShadowDepth="3"
                                 BlurRadius="5"
                                 Opacity="0.3"/>
                    </Border.Effect>
                    
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Icono -->
                        <TextBlock Grid.Row="0" Grid.RowSpan="2" Grid.Column="0"
                                   Text="{Binding Symbol}"
                                   Foreground="White"
                                   FontSize="24"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>

                        <!-- Título -->
                        <TextBlock Grid.Row="0" Grid.Column="1"
                                   Text="{Binding Title}"
                                   Foreground="White"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,4"/>

                        <!-- Mensaje -->
                        <TextBlock Grid.Row="1" Grid.Column="1"
                                   Text="{Binding Message}"
                                   Foreground="White"
                                   TextWrapping="Wrap"/>

                        <!-- Botones de acción (solo para notificaciones interactivas) -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    Margin="0,10,0,0"
                                    Visibility="{Binding IsInteractive, Converter={dxmvvm:BooleanToVisibilityConverter}}">
                            <ItemsControl ItemsSource="{Binding Actions}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding Text}"
                                                Margin="5,0,0,0"
                                                Padding="12,6"
                                                FontSize="12"
                                                FontWeight="SemiBold"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                Click="ActionButton_Click">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="#33FFFFFF"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Style}" Value="Success">
                                                            <Setter Property="Background" Value="#4CAF50"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Style}" Value="Primary">
                                                            <Setter Property="Background" Value="#2196F3"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Style}" Value="Secondary">
                                                            <Setter Property="Background" Value="#66FFFFFF"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Style}" Value="Danger">
                                                            <Setter Property="Background" Value="#F44336"/>
                                                        </DataTrigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Opacity" Value="0.8"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <!-- Botón cerrar (solo para notificaciones no interactivas o como X para cerrar) -->
                        <Button Grid.Row="0" Grid.Column="2"
                                Content="×"
                                FontSize="16"
                                Foreground="White"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="5,0"
                                Click="CloseButton_Click"/>
                    </Grid>
                </Border>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>
